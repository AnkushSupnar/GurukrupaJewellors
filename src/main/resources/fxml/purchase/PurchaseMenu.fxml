<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIcon?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane style="-fx-background-color: #F5F5F5;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gurukrupa.controller.purchase.PurchaseMenuController">

    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;">
            <content>
                <VBox spacing="20.0" style="-fx-padding: 30;">
                    <children>
                        <!-- Purchase Operations Section -->
                        <VBox spacing="16.0">
                            <children>
                                <Label style="-fx-font-family: 'Segoe UI'; -fx-font-weight: 600; -fx-font-size: 18px;" text="Purchase Operations" textFill="#424242" />

                                <!-- Metal Purchase Invoice Card -->
                                <VBox spacing="12.0" style="-fx-background-color: #FFFFFF; -fx-background-radius: 12; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.08), 8, 0, 0, 3); -fx-padding: 24;">
                                    <children>
                                        <HBox alignment="CENTER_LEFT" spacing="16.0">
                                            <children>
                                                <VBox style="-fx-background-color: #E3F2FD; -fx-background-radius: 12; -fx-padding: 16; -fx-pref-width: 60; -fx-pref-height: 60; -fx-alignment: CENTER;">
                                                    <children>
                                                        <FontAwesomeIcon fill="#1976D2" glyphName="CUBE" size="2.0em" />
                                                    </children>
                                                </VBox>
                                                <VBox spacing="4.0" HBox.hgrow="ALWAYS">
                                                    <children>
                                                        <Label style="-fx-font-family: 'Segoe UI'; -fx-font-weight: 600; -fx-font-size: 16px;" text="Metal Purchase" textFill="#212121" />
                                                        <Label style="-fx-font-family: 'Segoe UI'; -fx-font-size: 13px;" text="Record metal purchases from suppliers with seller percentage and fine percentage" textFill="#616161" wrapText="true" />
                                                    </children>
                                                </VBox>
                                                <HBox spacing="12.0">
                                                    <children>
                                                        <Button fx:id="btnPurchaseInvoice" style="-fx-background-color: #1976D2; -fx-text-fill: white; -fx-font-family: 'Segoe UI'; -fx-font-weight: 600; -fx-background-radius: 8; -fx-padding: 12 20 12 20; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(25,118,210,0.3), 4, 0, 0, 2);" text="CREATE PURCHASE">
                                                            <font>
                                                                <Font size="12.0" />
                                                            </font>
                                                        </Button>
                                                        <Button fx:id="btnViewPurchases" style="-fx-background-color: transparent; -fx-text-fill: #1976D2; -fx-font-family: 'Segoe UI'; -fx-font-weight: 600; -fx-background-radius: 8; -fx-padding: 12 20 12 20; -fx-cursor: hand; -fx-border-color: #1976D2; -fx-border-radius: 8; -fx-border-width: 1.5;" text="VIEW ALL">
                                                            <font>
                                                                <Font size="12.0" />
                                                            </font>
                                                        </Button>
                                                    </children>
                                                </HBox>
                                            </children>
                                        </HBox>
                                    </children>
                                </VBox>

                                <!-- Supplier Management Card -->
                                <VBox spacing="12.0" style="-fx-background-color: #FFFFFF; -fx-background-radius: 12; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.08), 8, 0, 0, 3); -fx-padding: 24;">
                                    <children>
                                        <HBox alignment="CENTER_LEFT" spacing="16.0">
                                            <children>
                                                <VBox style="-fx-background-color: #E0F2F1; -fx-background-radius: 12; -fx-padding: 16; -fx-pref-width: 60; -fx-pref-height: 60; -fx-alignment: CENTER;">
                                                    <children>
                                                        <FontAwesomeIcon fill="#00796B" glyphName="USERS" size="2.0em" />
                                                    </children>
                                                </VBox>
                                                <VBox spacing="4.0" HBox.hgrow="ALWAYS">
                                                    <children>
                                                        <Label style="-fx-font-family: 'Segoe UI'; -fx-font-weight: 600; -fx-font-size: 16px;" text="Supplier Management" textFill="#212121" />
                                                        <Label style="-fx-font-family: 'Segoe UI'; -fx-font-size: 13px;" text="Add and manage supplier information, track payments and view supplier history" textFill="#616161" wrapText="true" />
                                                    </children>
                                                </VBox>
                                                <HBox spacing="12.0">
                                                    <children>
                                                        <Button fx:id="btnAddSupplier" style="-fx-background-color: #00796B; -fx-text-fill: white; -fx-font-family: 'Segoe UI'; -fx-font-weight: 600; -fx-background-radius: 8; -fx-padding: 12 20 12 20; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(0,121,107,0.3), 4, 0, 0, 2);" text="ADD SUPPLIER">
                                                            <font>
                                                                <Font size="12.0" />
                                                            </font>
                                                        </Button>
                                                        <Button fx:id="btnViewSuppliers" style="-fx-background-color: transparent; -fx-text-fill: #00796B; -fx-font-family: 'Segoe UI'; -fx-font-weight: 600; -fx-background-radius: 8; -fx-padding: 12 20 12 20; -fx-cursor: hand; -fx-border-color: #00796B; -fx-border-radius: 8; -fx-border-width: 1.5;" text="VIEW ALL">
                                                            <font>
                                                                <Font size="12.0" />
                                                            </font>
                                                        </Button>
                                                    </children>
                                                </HBox>
                                            </children>
                                        </HBox>
                                    </children>
                                </VBox>
                            </children>
                        </VBox>

                        <!-- Inventory Section -->
                        <VBox spacing="16.0">
                            <children>
                                <Label style="-fx-font-family: 'Segoe UI'; -fx-font-weight: 600; -fx-font-size: 18px;" text="Inventory Management" textFill="#424242" />

                                <!-- Metal Stock Card -->
                                <VBox spacing="12.0" style="-fx-background-color: #FFFFFF; -fx-background-radius: 12; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.08), 8, 0, 0, 3); -fx-padding: 24;">
                                    <children>
                                        <HBox alignment="CENTER_LEFT" spacing="16.0">
                                            <children>
                                                <VBox style="-fx-background-color: #FFF3E0; -fx-background-radius: 12; -fx-padding: 16; -fx-pref-width: 60; -fx-pref-height: 60; -fx-alignment: CENTER;">
                                                    <children>
                                                        <FontAwesomeIcon fill="#F57C00" glyphName="CUBES" size="2.0em" />
                                                    </children>
                                                </VBox>
                                                <VBox spacing="4.0" HBox.hgrow="ALWAYS">
                                                    <children>
                                                        <Label style="-fx-font-family: 'Segoe UI'; -fx-font-weight: 600; -fx-font-size: 16px;" text="Metal Stock" textFill="#212121" />
                                                        <Label style="-fx-font-family: 'Segoe UI'; -fx-font-size: 13px;" text="View available purchased metal stock by type and purity for manufacturing" textFill="#616161" wrapText="true" />
                                                    </children>
                                                </VBox>
                                                <HBox spacing="12.0">
                                                    <children>
                                                        <Button fx:id="btnMetalStock" style="-fx-background-color: #F57C00; -fx-text-fill: white; -fx-font-family: 'Segoe UI'; -fx-font-weight: 600; -fx-background-radius: 8; -fx-padding: 12 20 12 20; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(245,124,0,0.3), 4, 0, 0, 2);" text="VIEW STOCK">
                                                            <font>
                                                                <Font size="12.0" />
                                                            </font>
                                                        </Button>
                                                        <Button fx:id="btnStockReport" style="-fx-background-color: transparent; -fx-text-fill: #F57C00; -fx-font-family: 'Segoe UI'; -fx-font-weight: 600; -fx-background-radius: 8; -fx-padding: 12 20 12 20; -fx-cursor: hand; -fx-border-color: #F57C00; -fx-border-radius: 8; -fx-border-width: 1.5;" text="REPORTS">
                                                            <font>
                                                                <Font size="12.0" />
                                                            </font>
                                                        </Button>
                                                    </children>
                                                </HBox>
                                            </children>
                                        </HBox>
                                    </children>
                                </VBox>
                            </children>
                        </VBox>

                        <!-- Purchase Statistics Section -->
                        <VBox spacing="16.0">
                            <children>
                                <HBox alignment="CENTER_LEFT" spacing="12.0">
                                    <children>
                                        <Label style="-fx-font-family: 'Segoe UI'; -fx-font-weight: 600; -fx-font-size: 18px;" text="Purchase Statistics" textFill="#424242" />
                                        <Button fx:id="btnRefresh" style="-fx-background-color: transparent; -fx-cursor: hand;">
                                            <graphic>
                                                <FontAwesomeIcon fill="#757575" glyphName="REFRESH" size="1.2em" />
                                            </graphic>
                                        </Button>
                                    </children>
                                </HBox>

                                <HBox spacing="20.0">
                                    <children>
                                        <!-- Today's Purchases Card -->
                                        <VBox spacing="8.0" style="-fx-background-color: #FFFFFF; -fx-background-radius: 12; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.08), 8, 0, 0, 3); -fx-padding: 20;" HBox.hgrow="ALWAYS">
                                            <children>
                                                <HBox alignment="CENTER_LEFT" spacing="12.0">
                                                    <children>
                                                        <VBox style="-fx-background-color: #E3F2FD; -fx-background-radius: 8; -fx-padding: 10; -fx-pref-width: 40; -fx-pref-height: 40; -fx-alignment: CENTER;">
                                                            <children>
                                                                <FontAwesomeIcon fill="#1976D2" glyphName="RUPEE" size="1.5em" />
                                                            </children>
                                                        </VBox>
                                                        <Label style="-fx-font-family: 'Segoe UI'; -fx-font-weight: 600; -fx-font-size: 14px;" text="Today's Purchases" textFill="#424242" />
                                                    </children>
                                                </HBox>
                                                <Label fx:id="lblTodayPurchases" style="-fx-font-family: 'Segoe UI'; -fx-font-weight: 700; -fx-font-size: 24px;" text="₹0.00" textFill="#212121" />
                                                <Label style="-fx-font-family: 'Segoe UI'; -fx-font-size: 12px;" text="Paid Amount" textFill="#757575" />
                                                <Label fx:id="lblTodayPaid" style="-fx-font-family: 'Segoe UI'; -fx-font-weight: 600; -fx-font-size: 16px;" text="₹0.00" textFill="#1976D2" />
                                            </children>
                                        </VBox>

                                        <!-- Today's Invoices Card -->
                                        <VBox spacing="8.0" style="-fx-background-color: #FFFFFF; -fx-background-radius: 12; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.08), 8, 0, 0, 3); -fx-padding: 20;" HBox.hgrow="ALWAYS">
                                            <children>
                                                <HBox alignment="CENTER_LEFT" spacing="12.0">
                                                    <children>
                                                        <VBox style="-fx-background-color: #E0F2F1; -fx-background-radius: 8; -fx-padding: 10; -fx-pref-width: 40; -fx-pref-height: 40; -fx-alignment: CENTER;">
                                                            <children>
                                                                <FontAwesomeIcon fill="#00796B" glyphName="FILE_TEXT" size="1.5em" />
                                                            </children>
                                                        </VBox>
                                                        <Label style="-fx-font-family: 'Segoe UI'; -fx-font-weight: 600; -fx-font-size: 14px;" text="Today's Invoices" textFill="#424242" />
                                                    </children>
                                                </HBox>
                                                <Label fx:id="lblTodayInvoices" style="-fx-font-family: 'Segoe UI'; -fx-font-weight: 700; -fx-font-size: 32px;" text="0" textFill="#212121" />
                                                <Label style="-fx-font-family: 'Segoe UI'; -fx-font-size: 12px;" text="Invoices Created" textFill="#757575" />
                                            </children>
                                        </VBox>

                                        <!-- This Month Card -->
                                        <VBox spacing="8.0" style="-fx-background-color: #FFFFFF; -fx-background-radius: 12; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.08), 8, 0, 0, 3); -fx-padding: 20;" HBox.hgrow="ALWAYS">
                                            <children>
                                                <HBox alignment="CENTER_LEFT" spacing="12.0">
                                                    <children>
                                                        <VBox style="-fx-background-color: #FFF3E0; -fx-background-radius: 8; -fx-padding: 10; -fx-pref-width: 40; -fx-pref-height: 40; -fx-alignment: CENTER;">
                                                            <children>
                                                                <FontAwesomeIcon fill="#F57C00" glyphName="CALENDAR" size="1.5em" />
                                                            </children>
                                                        </VBox>
                                                        <Label style="-fx-font-family: 'Segoe UI'; -fx-font-weight: 600; -fx-font-size: 14px;" text="This Month Total" textFill="#424242" />
                                                    </children>
                                                </HBox>
                                                <Label fx:id="lblMonthPurchases" style="-fx-font-family: 'Segoe UI'; -fx-font-weight: 700; -fx-font-size: 24px;" text="₹0.00" textFill="#212121" />
                                                <Label style="-fx-font-family: 'Segoe UI'; -fx-font-size: 12px;" text="Paid Amount" textFill="#757575" />
                                                <Label fx:id="lblMonthPaid" style="-fx-font-family: 'Segoe UI'; -fx-font-weight: 600; -fx-font-size: 16px;" text="₹0.00" textFill="#F57C00" />
                                            </children>
                                        </VBox>
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                    </children>
                </VBox>
            </content>
        </ScrollPane>
    </center>
</BorderPane>
