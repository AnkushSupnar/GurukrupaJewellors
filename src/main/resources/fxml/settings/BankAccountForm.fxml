<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIcon?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="800.0" prefWidth="1200.0" style="-fx-background-color: #F5F5F5;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gurukrupa.controller.settings.BankAccountFormController">
   <children>
      
      <!-- Main Container -->
      <HBox spacing="20.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
         <children>
            
            <!-- Left Panel - Form -->
            <VBox spacing="20.0" style="-fx-background-color: #FFFFFF; -fx-background-radius: 16; -fx-padding: 30; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.12), 20, 0, 0, 4);" HBox.hgrow="NEVER" prefWidth="500.0">
               <children>
                  
                  <!-- Form Header with Back Button -->
                  <HBox alignment="CENTER_LEFT" spacing="15.0">
                     <children>
                        <!-- Back Button -->
                        <Button fx:id="btnBack" mnemonicParsing="false" style="-fx-background-color: #E0E0E0; -fx-background-radius: 20; -fx-padding: 10; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 2, 0, 0, 1);">
                           <graphic>
                              <FontAwesomeIcon fill="#424242" glyphName="ARROW_LEFT" size="1.5em" />
                           </graphic>
                        </Button>
                        
                        <StackPane prefHeight="60.0" prefWidth="60.0" style="-fx-background-color: linear-gradient(135deg, #1976D2 0%, #0D47A1 100%); -fx-background-radius: 30;">
                           <children>
                              <FontAwesomeIcon fill="WHITE" glyphName="UNIVERSITY" size="1.8em" />
                           </children>
                        </StackPane>
                        <VBox>
                           <children>
                              <Text fx:id="txtFormTitle" fill="#1A237E" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-weight: bold; -fx-font-size: 26px; -fx-font-family: 'Segoe UI';" text="Add Bank Account" />
                              <Text fill="#757575" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-size: 14px;" text="Manage bank account details" />
                           </children>
                        </VBox>
                     </children>
                  </HBox>
                  
                  <!-- Form Content in ScrollPane -->
                  <ScrollPane fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: transparent;" vbarPolicy="AS_NEEDED" VBox.vgrow="ALWAYS">
                     <content>
                        <VBox spacing="20.0">
                           <children>
                              
                              <!-- Account Information Section -->
                              <VBox spacing="15.0">
                                 <children>
                                    <Text fill="#1976D2" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-weight: bold; -fx-font-size: 16px; -fx-font-family: 'Segoe UI';" text="ACCOUNT INFORMATION" />
                                    
                                    <!-- Bank Name and Account Type -->
                                    <HBox spacing="15.0">
                                       <children>
                                          <VBox spacing="8.0" HBox.hgrow="ALWAYS">
                                             <children>
                                                <Label style="-fx-text-fill: #212121; -fx-font-weight: 600; -fx-font-size: 13px; -fx-font-family: 'Segoe UI';" text="Bank Name *" />
                                                <TextField fx:id="txtBankName" promptText="e.g., State Bank of India" style="-fx-background-color: #FAFAFA; -fx-background-radius: 8; -fx-padding: 12; -fx-font-size: 14px; -fx-border-color: #E0E0E0; -fx-border-radius: 8; -fx-border-width: 1; -fx-font-family: 'Segoe UI';" />
                                             </children>
                                          </VBox>
                                          <VBox spacing="8.0" HBox.hgrow="ALWAYS">
                                             <children>
                                                <Label style="-fx-text-fill: #212121; -fx-font-weight: 600; -fx-font-size: 13px; -fx-font-family: 'Segoe UI';" text="Account Type *" />
                                                <ComboBox fx:id="cmbAccountType" promptText="Select account type" style="-fx-background-color: #FAFAFA; -fx-background-radius: 8; -fx-padding: 8; -fx-border-color: #E0E0E0; -fx-border-radius: 8; -fx-border-width: 1; -fx-font-family: 'Segoe UI'; -fx-font-size: 14px;" HBox.hgrow="ALWAYS" />
                                             </children>
                                          </VBox>
                                       </children>
                                    </HBox>
                                    
                                    <!-- Account Number and IFSC -->
                                    <HBox spacing="15.0">
                                       <children>
                                          <VBox spacing="8.0" HBox.hgrow="ALWAYS">
                                             <children>
                                                <Label style="-fx-text-fill: #212121; -fx-font-weight: 600; -fx-font-size: 13px; -fx-font-family: 'Segoe UI';" text="Account Number *" />
                                                <TextField fx:id="txtAccountNumber" promptText="Enter account number" style="-fx-background-color: #FAFAFA; -fx-background-radius: 8; -fx-padding: 12; -fx-font-size: 14px; -fx-border-color: #E0E0E0; -fx-border-radius: 8; -fx-border-width: 1; -fx-font-family: 'Segoe UI';" />
                                             </children>
                                          </VBox>
                                          <VBox spacing="8.0" HBox.hgrow="ALWAYS">
                                             <children>
                                                <Label style="-fx-text-fill: #212121; -fx-font-weight: 600; -fx-font-size: 13px; -fx-font-family: 'Segoe UI';" text="IFSC Code *" />
                                                <TextField fx:id="txtIFSCCode" promptText="e.g., SBIN0001234" style="-fx-background-color: #FAFAFA; -fx-background-radius: 8; -fx-padding: 12; -fx-font-size: 14px; -fx-border-color: #E0E0E0; -fx-border-radius: 8; -fx-border-width: 1; -fx-font-family: 'Segoe UI';" />
                                             </children>
                                          </VBox>
                                       </children>
                                    </HBox>
                                    
                                    <!-- Account Holder Name -->
                                    <VBox spacing="8.0">
                                       <children>
                                          <Label style="-fx-text-fill: #212121; -fx-font-weight: 600; -fx-font-size: 13px; -fx-font-family: 'Segoe UI';" text="Account Holder Name *" />
                                          <TextField fx:id="txtAccountHolderName" promptText="Enter account holder name" style="-fx-background-color: #FAFAFA; -fx-background-radius: 8; -fx-padding: 12; -fx-font-size: 14px; -fx-border-color: #E0E0E0; -fx-border-radius: 8; -fx-border-width: 1; -fx-font-family: 'Segoe UI';" />
                                       </children>
                                    </VBox>
                                 </children>
                              </VBox>
                              
                              <!-- Branch Information Section -->
                              <VBox spacing="15.0">
                                 <children>
                                    <Text fill="#388E3C" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-weight: bold; -fx-font-size: 16px; -fx-font-family: 'Segoe UI';" text="BRANCH INFORMATION" />
                                    
                                    <HBox spacing="15.0">
                                       <children>
                                          <VBox spacing="8.0" HBox.hgrow="ALWAYS">
                                             <children>
                                                <Label style="-fx-text-fill: #212121; -fx-font-weight: 600; -fx-font-size: 13px; -fx-font-family: 'Segoe UI';" text="Branch Name" />
                                                <TextField fx:id="txtBranchName" promptText="Enter branch name" style="-fx-background-color: #FAFAFA; -fx-background-radius: 8; -fx-padding: 12; -fx-font-size: 14px; -fx-border-color: #E0E0E0; -fx-border-radius: 8; -fx-border-width: 1; -fx-font-family: 'Segoe UI';" />
                                             </children>
                                          </VBox>
                                          <VBox spacing="8.0" HBox.hgrow="ALWAYS">
                                             <children>
                                                <Label style="-fx-text-fill: #212121; -fx-font-weight: 600; -fx-font-size: 13px; -fx-font-family: 'Segoe UI';" text="Branch Address" />
                                                <TextField fx:id="txtBranchAddress" promptText="Enter branch address" style="-fx-background-color: #FAFAFA; -fx-background-radius: 8; -fx-padding: 12; -fx-font-size: 14px; -fx-border-color: #E0E0E0; -fx-border-radius: 8; -fx-border-width: 1; -fx-font-family: 'Segoe UI';" />
                                             </children>
                                          </VBox>
                                       </children>
                                    </HBox>
                                 </children>
                              </VBox>
                              
                              <!-- Balance Information Section -->
                              <VBox spacing="15.0">
                                 <children>
                                    <Text fill="#F57C00" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-weight: bold; -fx-font-size: 16px; -fx-font-family: 'Segoe UI';" text="OPENING BALANCE" />
                                    
                                    <HBox spacing="15.0">
                                       <children>
                                          <VBox spacing="8.0" HBox.hgrow="ALWAYS">
                                             <children>
                                                <Label style="-fx-text-fill: #212121; -fx-font-weight: 600; -fx-font-size: 13px; -fx-font-family: 'Segoe UI';" text="Opening Balance *" />
                                                <TextField fx:id="txtOpeningBalance" promptText="0.00" text="0.00" style="-fx-background-color: #FAFAFA; -fx-background-radius: 8; -fx-padding: 12; -fx-font-size: 14px; -fx-border-color: #E0E0E0; -fx-border-radius: 8; -fx-border-width: 1; -fx-font-family: 'Segoe UI';" />
                                             </children>
                                          </VBox>
                                          <VBox spacing="8.0" HBox.hgrow="ALWAYS">
                                             <children>
                                                <Label style="-fx-text-fill: #212121; -fx-font-weight: 600; -fx-font-size: 13px; -fx-font-family: 'Segoe UI';" text="Balance Type *" />
                                                <ComboBox fx:id="cmbBalanceType" promptText="Select balance type" style="-fx-background-color: #FAFAFA; -fx-background-radius: 8; -fx-padding: 8; -fx-border-color: #E0E0E0; -fx-border-radius: 8; -fx-border-width: 1; -fx-font-family: 'Segoe UI'; -fx-font-size: 14px;" HBox.hgrow="ALWAYS" />
                                             </children>
                                          </VBox>
                                       </children>
                                    </HBox>
                                 </children>
                              </VBox>
                              
                              <!-- Action Buttons -->
                              <HBox alignment="CENTER" spacing="15.0">
                                 <children>
                                    <Button fx:id="btnSave" mnemonicParsing="false" prefHeight="48.0" prefWidth="140.0" style="-fx-background-color: #2E7D32; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-font-size: 14px; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(46,125,50,0.3), 4, 0, 0, 2); -fx-font-family: 'Segoe UI';" text="SAVE">
                                       <graphic>
                                          <FontAwesomeIcon fill="WHITE" glyphName="SAVE" size="1.2em" />
                                       </graphic>
                                       <font>
                                          <Font name="System Bold" size="14.0" />
                                       </font>
                                    </Button>
                                    <Button fx:id="btnUpdate" mnemonicParsing="false" prefHeight="48.0" prefWidth="140.0" style="-fx-background-color: #1976D2; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-font-size: 14px; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(25,118,210,0.3), 4, 0, 0, 2); -fx-font-family: 'Segoe UI';" text="UPDATE" visible="false">
                                       <graphic>
                                          <FontAwesomeIcon fill="WHITE" glyphName="EDIT" size="1.2em" />
                                       </graphic>
                                       <font>
                                          <Font name="System Bold" size="14.0" />
                                       </font>
                                    </Button>
                                    <Button fx:id="btnClear" mnemonicParsing="false" prefHeight="48.0" prefWidth="140.0" style="-fx-background-color: #616161; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-font-size: 14px; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(97,97,97,0.3), 4, 0, 0, 2); -fx-font-family: 'Segoe UI';" text="CLEAR">
                                       <graphic>
                                          <FontAwesomeIcon fill="WHITE" glyphName="ERASER" size="1.2em" />
                                       </graphic>
                                       <font>
                                          <Font name="System Bold" size="14.0" />
                                       </font>
                                    </Button>
                                 </children>
                                 <VBox.margin>
                                    <Insets top="20.0" />
                                 </VBox.margin>
                              </HBox>
                           </children>
                           <padding>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </padding>
                        </VBox>
                     </content>
                  </ScrollPane>
               </children>
            </VBox>
            
            <!-- Right Panel - Bank Account List -->
            <VBox spacing="15.0" style="-fx-background-color: #FFFFFF; -fx-background-radius: 16; -fx-padding: 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.12), 20, 0, 0, 4);" HBox.hgrow="ALWAYS">
               <children>
                  
                  <!-- List Header -->
                  <HBox alignment="CENTER_LEFT" spacing="15.0">
                     <children>
                        <StackPane prefHeight="50.0" prefWidth="50.0" style="-fx-background-color: linear-gradient(135deg, #1976D2 0%, #0D47A1 100%); -fx-background-radius: 25;">
                           <children>
                              <FontAwesomeIcon fill="WHITE" glyphName="LIST" size="1.5em" />
                           </children>
                        </StackPane>
                        <VBox HBox.hgrow="ALWAYS">
                           <children>
                              <Text fill="#1A237E" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-weight: bold; -fx-font-size: 22px; -fx-font-family: 'Segoe UI';" text="Bank Accounts" />
                              <Text fill="#757575" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-size: 12px;" text="Click on an account to edit" />
                           </children>
                        </VBox>
                        <Button fx:id="btnRefresh" mnemonicParsing="false" style="-fx-background-color: #E0E0E0; -fx-background-radius: 20; -fx-padding: 10; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 2, 0, 0, 1);" text="">
                           <graphic>
                              <FontAwesomeIcon fill="#616161" glyphName="REFRESH" size="1.2em" />
                           </graphic>
                        </Button>
                     </children>
                  </HBox>
                  
                  <!-- Search Box -->
                  <HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-background-color: #F5F5F5; -fx-background-radius: 25; -fx-padding: 12; -fx-border-color: #E0E0E0; -fx-border-radius: 25; -fx-border-width: 1;">
                     <children>
                        <FontAwesomeIcon fill="#757575" glyphName="SEARCH" size="1.2em" />
                        <TextField fx:id="txtSearch" promptText="Search by bank name, account number, or holder name..." style="-fx-background-color: transparent; -fx-border-color: transparent; -fx-font-family: 'Segoe UI'; -fx-font-size: 14px;" HBox.hgrow="ALWAYS" />
                     </children>
                  </HBox>
                  
                  <!-- Filter by Type -->
                  <HBox spacing="10.0">
                     <children>
                        <ComboBox fx:id="cmbFilterType" promptText="All Account Types" style="-fx-background-color: #FAFAFA; -fx-background-radius: 8; -fx-padding: 8; -fx-border-color: #E0E0E0; -fx-border-radius: 8; -fx-border-width: 1; -fx-font-family: 'Segoe UI'; -fx-font-size: 13px;" HBox.hgrow="ALWAYS" />
                        <Button fx:id="btnClearFilters" mnemonicParsing="false" style="-fx-background-color: #E3F2FD; -fx-background-radius: 8; -fx-padding: 8 16 8 16; -fx-border-color: #1976D2; -fx-border-radius: 8; -fx-border-width: 1; -fx-cursor: hand; -fx-font-family: 'Segoe UI'; -fx-font-size: 13px;" text="Clear">
                           <graphic>
                              <FontAwesomeIcon fill="#0D47A1" glyphName="TIMES" size="1em" />
                           </graphic>
                        </Button>
                     </children>
                  </HBox>
                  
                  <!-- Bank Accounts Table -->
                  <TableView fx:id="tableAccounts" style="-fx-background-color: transparent; -fx-background-insets: 0; -fx-border-color: #E0E0E0; -fx-border-radius: 8; -fx-border-width: 1;" VBox.vgrow="ALWAYS">
                     <columns>
                        <TableColumn fx:id="colId" prefWidth="40.0" style="-fx-alignment: CENTER;" text="#" visible="false" />
                        <TableColumn fx:id="colBankName" prefWidth="150.0" text="Bank Name" />
                        <TableColumn fx:id="colAccountNumber" prefWidth="140.0" text="Account Number" />
                        <TableColumn fx:id="colAccountType" prefWidth="100.0" style="-fx-alignment: CENTER;" text="Type" />
                        <TableColumn fx:id="colHolderName" prefWidth="150.0" text="Holder Name" />
                        <TableColumn fx:id="colBalance" prefWidth="120.0" style="-fx-alignment: CENTER-RIGHT;" text="Balance" />
                        <TableColumn fx:id="colStatus" prefWidth="80.0" style="-fx-alignment: CENTER;" text="Status" />
                        <TableColumn fx:id="colActions" prefWidth="100.0" style="-fx-alignment: CENTER;" text="Actions" />
                     </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
                  
                  <!-- Summary Info -->
                  <HBox alignment="CENTER" spacing="30.0" style="-fx-background-color: #E3F2FD; -fx-background-radius: 8; -fx-padding: 15;">
                     <children>
                        <HBox spacing="8.0">
                           <children>
                              <FontAwesomeIcon fill="#1976D2" glyphName="INFO_CIRCLE" size="1.2em" />
                              <Text fill="#0D47A1" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-weight: 600; -fx-font-family: 'Segoe UI';" text="Total Accounts:" />
                              <Text fx:id="txtTotalAccounts" fill="#0D47A1" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-weight: bold; -fx-font-family: 'Segoe UI';" text="0" />
                           </children>
                        </HBox>
                        <HBox spacing="8.0">
                           <children>
                              <FontAwesomeIcon fill="#1976D2" glyphName="MONEY" size="1.2em" />
                              <Text fill="#0D47A1" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-weight: 600; -fx-font-family: 'Segoe UI';" text="Total Balance:" />
                              <Text fx:id="txtTotalBalance" fill="#0D47A1" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-weight: bold; -fx-font-family: 'Segoe UI';" text="â‚¹ 0.00" />
                           </children>
                        </HBox>
                     </children>
                  </HBox>
                  
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
</AnchorPane>