<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIcon?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="750.0" prefWidth="1000.0" style="-fx-background-color: #FAFAFA;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gurukrupa.controller.settings.AppSettingsController">
   <top>
      <!-- Material Design Header -->
      <VBox>
         <children>
            <HBox alignment="CENTER_LEFT" style="-fx-background-color: linear-gradient(to right, #1976D2, #1565C0); -fx-padding: 24;" prefHeight="80.0">
               <children>
                  <FontAwesomeIcon fill="#FFFFFF" glyphName="COG" size="2.2em">
                     <HBox.margin>
                        <Insets right="20.0" />
                     </HBox.margin>
                  </FontAwesomeIcon>
                  <VBox spacing="4.0">
                     <children>
                        <Label text="Application Settings" style="-fx-font-family: 'Segoe UI'; -fx-font-weight: 600; -fx-text-fill: #FFFFFF;">
                           <font>
                              <Font size="26.0" />
                           </font>
                        </Label>
                        <Label text="Configure your application preferences" style="-fx-font-family: 'Segoe UI'; -fx-text-fill: rgba(255,255,255,0.8);">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                     </children>
                  </VBox>
                  <HBox HBox.hgrow="ALWAYS" />
                  <Button fx:id="btnClose" minWidth="48.0" minHeight="48.0" maxWidth="48.0" maxHeight="48.0" style="-fx-background-color: rgba(255,255,255,0.1); -fx-background-radius: 24; -fx-cursor: hand;">
                     <graphic>
                        <FontAwesomeIcon fill="#FFFFFF" glyphName="TIMES" size="1.6em" />
                     </graphic>
                  </Button>
               </children>
            </HBox>
            <!-- Shadow line -->
            <HBox prefHeight="4.0" style="-fx-background-color: linear-gradient(to bottom, rgba(0,0,0,0.12), rgba(0,0,0,0));" />
         </children>
      </VBox>
   </top>
   
   <center>
      <ScrollPane fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED" style="-fx-background-color: transparent; -fx-background: transparent;">
         <content>
            <VBox spacing="24.0" style="-fx-padding: 32;">
               <children>
                  
                  <!-- Bill Number Prefix Setting -->
                  <VBox spacing="0.0" style="-fx-background-color: #FFFFFF; -fx-background-radius: 12; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.08), 8, 0, 0, 2); -fx-border-color: rgba(0,0,0,0.06); -fx-border-radius: 12;">
                     <children>
                        <!-- Card Header -->
                        <HBox alignment="CENTER_LEFT" style="-fx-padding: 24 24 16 24; -fx-background-color: #F8F9FA; -fx-background-radius: 12 12 0 0;">
                           <children>
                              <FontAwesomeIcon fill="#1976D2" glyphName="FILE_TEXT" size="1.8em">
                                 <HBox.margin>
                                    <Insets right="16.0" />
                                 </HBox.margin>
                              </FontAwesomeIcon>
                              <VBox spacing="2.0">
                                 <children>
                                    <Label text="Bill Number Prefix" style="-fx-font-family: 'Segoe UI'; -fx-font-weight: 600; -fx-text-fill: #212121;">
                                       <font>
                                          <Font size="20.0" />
                                       </font>
                                    </Label>
                                    <Label text="Set the prefix for your bill numbers" style="-fx-font-family: 'Segoe UI'; -fx-text-fill: #757575;">
                                       <font>
                                          <Font size="13.0" />
                                       </font>
                                    </Label>
                                 </children>
                              </VBox>
                           </children>
                        </HBox>
                        
                        <!-- Card Content -->
                        <VBox spacing="20.0" style="-fx-padding: 24;">
                           <children>
                              <!-- Input Section -->
                              <VBox spacing="8.0">
                                 <children>
                                    <Label text="Prefix" style="-fx-font-family: 'Segoe UI'; -fx-font-weight: 500; -fx-text-fill: #424242;">
                                       <font>
                                          <Font size="14.0" />
                                       </font>
                                    </Label>
                                    <HBox spacing="16.0" alignment="CENTER_LEFT">
                                       <children>
                                          <TextField fx:id="txtBillPrefix" promptText="e.g., INV, BILL" prefWidth="280.0" style="-fx-font-size: 15; -fx-padding: 14; -fx-background-color: #F5F5F5; -fx-background-radius: 8; -fx-border-color: #E0E0E0; -fx-border-radius: 8; -fx-border-width: 1;" />
                                          <Button fx:id="btnSaveBillPrefix" text="SAVE" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: 600; -fx-padding: 14 28; -fx-background-radius: 8; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(76,175,80,0.3), 4, 0, 0, 2);">
                                             <font>
                                                <Font size="13.0" />
                                             </font>
                                          </Button>
                                       </children>
                                    </HBox>
                                 </children>
                              </VBox>
                              
                              <!-- Current Value Display -->
                              <HBox alignment="CENTER_LEFT" spacing="12.0" style="-fx-background-color: #E3F2FD; -fx-background-radius: 8; -fx-padding: 16;">
                                 <children>
                                    <FontAwesomeIcon fill="#1976D2" glyphName="INFO_CIRCLE" size="1.2em" />
                                    <Label text="Current Prefix:" style="-fx-font-family: 'Segoe UI'; -fx-font-weight: 500; -fx-text-fill: #1565C0;">
                                       <font>
                                          <Font size="14.0" />
                                       </font>
                                    </Label>
                                    <Label fx:id="lblCurrentPrefix" text="INV" style="-fx-font-family: 'Segoe UI'; -fx-font-weight: 700; -fx-text-fill: #0D47A1;">
                                       <font>
                                          <Font size="16.0" />
                                       </font>
                                    </Label>
                                 </children>
                              </HBox>
                           </children>
                        </VBox>
                     </children>
                  </VBox>
                  
                  <!-- Bottom padding for scroll -->
                  <VBox prefHeight="20.0" />
                  
               </children>
            </VBox>
         </content>
      </ScrollPane>
   </center>
</BorderPane>