<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIcon?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="800.0" prefWidth="1200.0" style="-fx-background-color: #F5F5F5;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gurukrupa.controller.settings.AppSettingsController">
   <children>
      
      <!-- Main Container -->
      <VBox spacing="20.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
         <children>
            
            <!-- Header with Back Button -->
            <HBox alignment="CENTER_LEFT" spacing="15.0" style="-fx-background-color: #FFFFFF; -fx-background-radius: 16; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.12), 20, 0, 0, 4);">
               <children>
                  <!-- Back Button -->
                  <Button fx:id="btnBack" mnemonicParsing="false" style="-fx-background-color: #E0E0E0; -fx-background-radius: 20; -fx-padding: 10; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 2, 0, 0, 1);">
                     <graphic>
                        <FontAwesomeIcon fill="#424242" glyphName="ARROW_LEFT" size="1.5em" />
                     </graphic>
                  </Button>
                  
                  <StackPane prefHeight="60.0" prefWidth="60.0" style="-fx-background-color: linear-gradient(135deg, #7B1FA2 0%, #4A148C 100%); -fx-background-radius: 30;">
                     <children>
                        <FontAwesomeIcon fill="WHITE" glyphName="COG" size="1.8em" />
                     </children>
                  </StackPane>
                  <VBox>
                     <children>
                        <Text fill="#4A148C" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-weight: bold; -fx-font-size: 28px; -fx-font-family: 'Segoe UI';" text="Application Settings" />
                        <Text fill="#757575" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-size: 14px; -fx-font-family: 'Segoe UI';" text="Configure your application preferences" />
                     </children>
                  </VBox>
               </children>
            </HBox>
   
            <!-- Content Area -->
            <ScrollPane fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: transparent;" vbarPolicy="AS_NEEDED" VBox.vgrow="ALWAYS">
               <content>
                  <VBox spacing="20.0">
                     <children>
                        
                        <!-- Settings Card -->
                        <VBox spacing="0.0" style="-fx-background-color: #FFFFFF; -fx-background-radius: 16; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.12), 20, 0, 0, 4);">
                           <children>
                              <!-- Card Header -->
                              <HBox alignment="CENTER_LEFT" spacing="15.0" style="-fx-background-color: linear-gradient(135deg, #7B1FA2 0%, #4A148C 100%); -fx-background-radius: 16 16 0 0; -fx-padding: 20;">
                                 <children>
                                    <StackPane prefHeight="40.0" prefWidth="40.0" style="-fx-background-color: rgba(255,255,255,0.2); -fx-background-radius: 20;">
                                       <children>
                                          <FontAwesomeIcon fill="WHITE" glyphName="FILE_TEXT" size="1.4em" />
                                       </children>
                                    </StackPane>
                                    <VBox>
                                       <children>
                                          <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-weight: bold; -fx-font-size: 20px; -fx-font-family: 'Segoe UI';" text="Bill Number Configuration" />
                                          <Text fill="rgba(255,255,255,0.9)" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-size: 13px; -fx-font-family: 'Segoe UI';" text="Set the prefix for your bill numbers" />
                                       </children>
                                    </VBox>
                                 </children>
                              </HBox>
                              
                              <!-- Card Content -->
                              <VBox spacing="25.0" style="-fx-padding: 30;">
                                 <children>
                                    <!-- Bill Prefix Section -->
                                    <VBox spacing="15.0">
                                       <children>
                                          <Text fill="#7B1FA2" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-weight: bold; -fx-font-size: 16px; -fx-font-family: 'Segoe UI';" text="BILL PREFIX SETTINGS" />
                                          
                                          <VBox spacing="8.0">
                                             <children>
                                                <Label style="-fx-text-fill: #212121; -fx-font-weight: 600; -fx-font-size: 13px; -fx-font-family: 'Segoe UI';" text="Bill Number Prefix *" />
                                                <TextField fx:id="txtBillPrefix" promptText="Enter bill number prefix (e.g., INV, BILL)" style="-fx-background-color: #FAFAFA; -fx-background-radius: 8; -fx-padding: 12; -fx-font-size: 14px; -fx-border-color: #E0E0E0; -fx-border-radius: 8; -fx-border-width: 1; -fx-font-family: 'Segoe UI';" />
                                             </children>
                                          </VBox>
                                          
                                          <!-- Current Prefix Display -->
                                          <HBox alignment="CENTER_LEFT" spacing="12.0" style="-fx-background-color: #F3E5F5; -fx-background-radius: 8; -fx-padding: 16;">
                                             <children>
                                                <FontAwesomeIcon fill="#7B1FA2" glyphName="INFO_CIRCLE" size="1.2em" />
                                                <Text fill="#4A148C" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-weight: 600; -fx-font-family: 'Segoe UI'; -fx-font-size: 14px;" text="Current Prefix: " />
                                                <Text fx:id="lblCurrentPrefix" fill="#4A148C" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-weight: bold; -fx-font-family: 'Segoe UI'; -fx-font-size: 16px;" text="INV" />
                                             </children>
                                          </HBox>
                                          
                                          <!-- Save Button -->
                                          <HBox alignment="CENTER" spacing="15.0">
                                             <children>
                                                <Button fx:id="btnSaveBillPrefix" mnemonicParsing="false" prefHeight="48.0" prefWidth="180.0" style="-fx-background-color: #7B1FA2; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-font-size: 14px; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(123,31,162,0.3), 4, 0, 0, 2); -fx-font-family: 'Segoe UI';" text="SAVE PREFIX">
                                                   <graphic>
                                                      <FontAwesomeIcon fill="WHITE" glyphName="SAVE" size="1.2em" />
                                                   </graphic>
                                                   <font>
                                                      <Font name="System Bold" size="14.0" />
                                                   </font>
                                                </Button>
                                             </children>
                                             <VBox.margin>
                                                <Insets top="10.0" />
                                             </VBox.margin>
                                          </HBox>
                                       </children>
                                    </VBox>
                                    
                                 </children>
                              </VBox>
                           </children>
                        </VBox>
                        
                     </children>
                     <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </padding>
                  </VBox>
               </content>
            </ScrollPane>
            
         </children>
      </VBox>
   </children>
</AnchorPane>