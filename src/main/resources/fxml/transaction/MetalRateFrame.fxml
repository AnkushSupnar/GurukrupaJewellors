<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIcon?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="800.0" prefWidth="1400.0" style="-fx-background-color: #F5F5F5;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gurukrupa.controller.transaction.MetalRateFormController">
   <children>
      
      <!-- Main Container -->
      <HBox spacing="20.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
         <children>
            
            <!-- Left Panel - Form -->
            <VBox spacing="20.0" style="-fx-background-color: #FFFFFF; -fx-background-radius: 16; -fx-padding: 30; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.12), 20, 0, 0, 4);" HBox.hgrow="NEVER" prefWidth="550.0">
               <children>
                  
                  <!-- Form Header with Back Button -->
                  <HBox alignment="CENTER_LEFT" spacing="15.0">
                     <children>
                        <!-- Back Button -->
                        <Button fx:id="btnBack" mnemonicParsing="false" style="-fx-background-color: #E0E0E0; -fx-background-radius: 20; -fx-padding: 10; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 2, 0, 0, 1);">
                           <graphic>
                              <FontAwesomeIcon fill="#424242" glyphName="ARROW_LEFT" size="1.5em" />
                           </graphic>
                        </Button>
                        
                        <StackPane prefHeight="60.0" prefWidth="60.0" style="-fx-background-color: linear-gradient(135deg, #FFB300 0%, #F57F17 100%); -fx-background-radius: 30;">
                           <children>
                              <FontAwesomeIcon fill="WHITE" glyphName="DIAMOND" size="1.8em" />
                           </children>
                        </StackPane>
                        <VBox>
                           <children>
                              <Text fill="#F57F17" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-weight: bold; -fx-font-size: 26px; -fx-font-family: 'Segoe UI';" text="Metal Rate Management" />
                              <Text fill="#757575" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-size: 14px;" text="Manage daily metal rates" />
                           </children>
                        </VBox>
                     </children>
                  </HBox>
                  
                  <!-- Form Content in ScrollPane -->
                  <ScrollPane fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: transparent;" vbarPolicy="AS_NEEDED" VBox.vgrow="ALWAYS">
                     <content>
                        <VBox spacing="20.0">
                           <children>
                              
                              <!-- Metal Information Section -->
                              <VBox spacing="15.0">
                                 <children>
                                    <Text fill="#FFB300" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-weight: bold; -fx-font-size: 16px; -fx-font-family: 'Segoe UI';" text="METAL INFORMATION" />
                                    
                                    <!-- Date and Metal Type -->
                                    <HBox spacing="15.0">
                                       <children>
                                          <VBox spacing="8.0" HBox.hgrow="ALWAYS">
                                             <children>
                                                <Label style="-fx-text-fill: #212121; -fx-font-weight: 600; -fx-font-size: 13px; -fx-font-family: 'Segoe UI';" text="Date *" />
                                                <DatePicker fx:id="dpRateDate" promptText="Select date" style="-fx-background-color: #FAFAFA; -fx-background-radius: 8; -fx-padding: 8; -fx-border-color: #E0E0E0; -fx-border-radius: 8; -fx-border-width: 1; -fx-font-family: 'Segoe UI'; -fx-font-size: 14px;" HBox.hgrow="ALWAYS" />
                                             </children>
                                          </VBox>
                                          <VBox spacing="8.0" HBox.hgrow="ALWAYS">
                                             <children>
                                                <Label style="-fx-text-fill: #212121; -fx-font-weight: 600; -fx-font-size: 13px; -fx-font-family: 'Segoe UI';" text="Metal Type *" />
                                                <ComboBox fx:id="cmbMetalType" promptText="Select metal type" style="-fx-background-color: #FAFAFA; -fx-background-radius: 8; -fx-padding: 8; -fx-border-color: #E0E0E0; -fx-border-radius: 8; -fx-border-width: 1; -fx-font-family: 'Segoe UI'; -fx-font-size: 14px;" HBox.hgrow="ALWAYS" />
                                             </children>
                                          </VBox>
                                       </children>
                                    </HBox>
                                    
                                    <!-- Metal Name -->
                                    <VBox spacing="8.0">
                                       <children>
                                          <Label style="-fx-text-fill: #212121; -fx-font-weight: 600; -fx-font-size: 13px; -fx-font-family: 'Segoe UI';" text="Metal Name *" />
                                          <ComboBox fx:id="cmbMetalName" promptText="Select metal name" style="-fx-background-color: #FAFAFA; -fx-background-radius: 8; -fx-padding: 8; -fx-border-color: #E0E0E0; -fx-border-radius: 8; -fx-border-width: 1; -fx-font-family: 'Segoe UI'; -fx-font-size: 14px;" HBox.hgrow="ALWAYS" />
                                       </children>
                                    </VBox>
                                 </children>
                              </VBox>
                              
                              <!-- Rate Information Section -->
                              <VBox spacing="15.0">
                                 <children>
                                    <Text fill="#F57C00" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-weight: bold; -fx-font-size: 16px; -fx-font-family: 'Segoe UI';" text="RATE INFORMATION" />
                                    
                                    <!-- Base Rate -->
                                    <VBox spacing="8.0">
                                       <children>
                                          <Label style="-fx-text-fill: #212121; -fx-font-weight: 600; -fx-font-size: 13px; -fx-font-family: 'Segoe UI';" text="Rate (Per 10 grams) *" />
                                          <TextField fx:id="txtRatePerTenGrams" promptText="Enter rate per 10 grams" style="-fx-background-color: #FAFAFA; -fx-background-radius: 8; -fx-padding: 12; -fx-font-size: 14px; -fx-border-color: #E0E0E0; -fx-border-radius: 8; -fx-border-width: 1; -fx-font-family: 'Segoe UI';" />
                                       </children>
                                    </VBox>
                                    
                                    <!-- Buying and Selling Rates -->
                                    <HBox spacing="15.0">
                                       <children>
                                          <VBox spacing="8.0" HBox.hgrow="ALWAYS">
                                             <children>
                                                <Label style="-fx-text-fill: #212121; -fx-font-weight: 600; -fx-font-size: 13px; -fx-font-family: 'Segoe UI';" text="Buying Rate" />
                                                <TextField fx:id="txtBuyingRate" promptText="Optional" style="-fx-background-color: #FAFAFA; -fx-background-radius: 8; -fx-padding: 12; -fx-font-size: 14px; -fx-border-color: #E0E0E0; -fx-border-radius: 8; -fx-border-width: 1; -fx-font-family: 'Segoe UI';" />
                                             </children>
                                          </VBox>
                                          <VBox spacing="8.0" HBox.hgrow="ALWAYS">
                                             <children>
                                                <Label style="-fx-text-fill: #212121; -fx-font-weight: 600; -fx-font-size: 13px; -fx-font-family: 'Segoe UI';" text="Selling Rate" />
                                                <TextField fx:id="txtSellingRate" promptText="Optional" style="-fx-background-color: #FAFAFA; -fx-background-radius: 8; -fx-padding: 12; -fx-font-size: 14px; -fx-border-color: #E0E0E0; -fx-border-radius: 8; -fx-border-width: 1; -fx-font-family: 'Segoe UI';" />
                                             </children>
                                          </VBox>
                                       </children>
                                    </HBox>
                                    
                                    <!-- Remarks -->
                                    <VBox spacing="8.0">
                                       <children>
                                          <Label style="-fx-text-fill: #212121; -fx-font-weight: 600; -fx-font-size: 13px; -fx-font-family: 'Segoe UI';" text="Remarks" />
                                          <TextField fx:id="txtRemarks" promptText="Enter any remarks (optional)" style="-fx-background-color: #FAFAFA; -fx-background-radius: 8; -fx-padding: 12; -fx-font-size: 14px; -fx-border-color: #E0E0E0; -fx-border-radius: 8; -fx-border-width: 1; -fx-font-family: 'Segoe UI';" />
                                       </children>
                                    </VBox>
                                 </children>
                              </VBox>
                              
                              <!-- Action Buttons -->
                              <HBox alignment="CENTER" spacing="15.0">
                                 <children>
                                    <Button fx:id="btnSave" mnemonicParsing="false" onAction="#handleSave" prefHeight="48.0" prefWidth="120.0" style="-fx-background-color: #43A047; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-font-size: 14px; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(67,160,71,0.3), 4, 0, 0, 2); -fx-font-family: 'Segoe UI';" text="SAVE">
                                       <graphic>
                                          <FontAwesomeIcon fill="WHITE" glyphName="SAVE" size="1.2em" />
                                       </graphic>
                                       <font>
                                          <Font name="System Bold" size="14.0" />
                                       </font>
                                    </Button>
                                    <Button fx:id="btnUpdate" mnemonicParsing="false" onAction="#handleUpdate" prefHeight="48.0" prefWidth="120.0" style="-fx-background-color: #FFB300; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-font-size: 14px; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(255,179,0,0.3), 4, 0, 0, 2); -fx-font-family: 'Segoe UI';" text="UPDATE" visible="false">
                                       <graphic>
                                          <FontAwesomeIcon fill="WHITE" glyphName="EDIT" size="1.2em" />
                                       </graphic>
                                       <font>
                                          <Font name="System Bold" size="14.0" />
                                       </font>
                                    </Button>
                                    <Button fx:id="btnClear" mnemonicParsing="false" onAction="#handleClear" prefHeight="48.0" prefWidth="120.0" style="-fx-background-color: #616161; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-font-size: 14px; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(97,97,97,0.3), 4, 0, 0, 2); -fx-font-family: 'Segoe UI';" text="CLEAR">
                                       <graphic>
                                          <FontAwesomeIcon fill="WHITE" glyphName="ERASER" size="1.2em" />
                                       </graphic>
                                       <font>
                                          <Font name="System Bold" size="14.0" />
                                       </font>
                                    </Button>
                                    <Button fx:id="btnDelete" mnemonicParsing="false" onAction="#handleDelete" prefHeight="48.0" prefWidth="120.0" style="-fx-background-color: #E53935; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-font-size: 14px; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(229,57,53,0.3), 4, 0, 0, 2); -fx-font-family: 'Segoe UI';" text="DELETE" visible="false">
                                       <graphic>
                                          <FontAwesomeIcon fill="WHITE" glyphName="TRASH" size="1.2em" />
                                       </graphic>
                                       <font>
                                          <Font name="System Bold" size="14.0" />
                                       </font>
                                    </Button>
                                 </children>
                                 <VBox.margin>
                                    <Insets top="20.0" />
                                 </VBox.margin>
                              </HBox>
                           </children>
                           <padding>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </padding>
                        </VBox>
                     </content>
                  </ScrollPane>
               </children>
            </VBox>
            
            <!-- Right Panel - Metal Rate History -->
            <VBox spacing="15.0" style="-fx-background-color: #FFFFFF; -fx-background-radius: 16; -fx-padding: 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.12), 20, 0, 0, 4);" HBox.hgrow="ALWAYS">
               <children>
                  
                  <!-- List Header -->
                  <HBox alignment="CENTER_LEFT" spacing="15.0">
                     <children>
                        <StackPane prefHeight="50.0" prefWidth="50.0" style="-fx-background-color: linear-gradient(135deg, #FFB300 0%, #F57F17 100%); -fx-background-radius: 25;">
                           <children>
                              <FontAwesomeIcon fill="WHITE" glyphName="LIST" size="1.5em" />
                           </children>
                        </StackPane>
                        <VBox HBox.hgrow="ALWAYS">
                           <children>
                              <Text fill="#F57F17" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-weight: bold; -fx-font-size: 22px; -fx-font-family: 'Segoe UI';" text="Metal Rate History" />
                              <Text fill="#757575" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-size: 12px;" text="Click on a record to edit" />
                           </children>
                        </VBox>
                        <Button fx:id="btnRefresh" mnemonicParsing="false" style="-fx-background-color: #E0E0E0; -fx-background-radius: 20; -fx-padding: 10; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 2, 0, 0, 1);" text="">
                           <graphic>
                              <FontAwesomeIcon fill="#616161" glyphName="REFRESH" size="1.2em" />
                           </graphic>
                        </Button>
                     </children>
                  </HBox>
                  
                  <!-- Search Section -->
                  <HBox spacing="10.0" style="-fx-background-color: #F5F5F5; -fx-background-radius: 12; -fx-padding: 15;">
                     <children>
                        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                           <children>
                              <Label style="-fx-font-weight: 600; -fx-font-size: 12px; -fx-text-fill: #616161;" text="Search by Date" />
                              <DatePicker fx:id="dpSearchDate" promptText="Select date" style="-fx-background-color: #FFFFFF; -fx-background-radius: 6; -fx-border-color: #E0E0E0; -fx-border-radius: 6; -fx-border-width: 1;" HBox.hgrow="ALWAYS" />
                           </children>
                        </VBox>
                        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                           <children>
                              <Label style="-fx-font-weight: 600; -fx-font-size: 12px; -fx-text-fill: #616161;" text="Metal Type" />
                              <ComboBox fx:id="cmbSearchMetalType" promptText="All Metal Types" style="-fx-background-color: #FFFFFF; -fx-background-radius: 6; -fx-border-color: #E0E0E0; -fx-border-radius: 6; -fx-border-width: 1;" HBox.hgrow="ALWAYS" />
                           </children>
                        </VBox>
                        <VBox alignment="BOTTOM_CENTER" spacing="5.0">
                           <children>
                              <HBox spacing="10.0">
                                 <children>
                                    <Button fx:id="btnSearch" mnemonicParsing="false" onAction="#handleSearch" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6; -fx-padding: 8 16 8 16; -fx-cursor: hand;" text="SEARCH">
                                       <graphic>
                                          <FontAwesomeIcon fill="WHITE" glyphName="SEARCH" size="1.0em" />
                                       </graphic>
                                    </Button>
                                    <Button fx:id="btnShowAll" mnemonicParsing="false" onAction="#handleShowAll" style="-fx-background-color: #607D8B; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6; -fx-padding: 8 16 8 16; -fx-cursor: hand;" text="SHOW ALL" />
                                 </children>
                              </HBox>
                           </children>
                        </VBox>
                     </children>
                  </HBox>
                  
                  <!-- Metal Rates Table -->
                  <TableView fx:id="tblMetalRates" style="-fx-background-color: transparent; -fx-background-insets: 0; -fx-border-color: #E0E0E0; -fx-border-radius: 8; -fx-border-width: 1;" VBox.vgrow="ALWAYS">
                     <columns>
                        <TableColumn fx:id="colNo" prefWidth="50.0" style="-fx-alignment: CENTER;" text="No" />
                        <TableColumn fx:id="colDate" prefWidth="100.0" text="Date" />
                        <TableColumn fx:id="colMetalType" prefWidth="100.0" text="Metal Type" />
                        <TableColumn fx:id="colMetalName" prefWidth="150.0" text="Metal Name" />
                        <TableColumn fx:id="colPurity" prefWidth="80.0" style="-fx-alignment: CENTER;" text="Purity" />
                        <TableColumn fx:id="colRatePerGram" prefWidth="100.0" style="-fx-alignment: CENTER-RIGHT;" text="Rate/Gram" />
                        <TableColumn fx:id="colRatePerTenGrams" prefWidth="100.0" style="-fx-alignment: CENTER-RIGHT;" text="Rate/10g" />
                        <TableColumn fx:id="colBuyingRate" prefWidth="100.0" style="-fx-alignment: CENTER-RIGHT;" text="Buying" />
                        <TableColumn fx:id="colSellingRate" prefWidth="100.0" style="-fx-alignment: CENTER-RIGHT;" text="Selling" />
                        <TableColumn fx:id="colRemarks" minWidth="100.0" text="Remarks" />
                     </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
                  
                  <!-- Summary Info -->
                  <HBox alignment="CENTER" spacing="30.0" style="-fx-background-color: #FFF3E0; -fx-background-radius: 8; -fx-padding: 15;">
                     <children>
                        <HBox spacing="8.0">
                           <children>
                              <FontAwesomeIcon fill="#FFB300" glyphName="INFO_CIRCLE" size="1.2em" />
                              <Text fill="#F57C00" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-weight: 600; -fx-font-family: 'Segoe UI';" text="Total Records:" />
                              <Text fx:id="txtTotalRecords" fill="#F57C00" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-weight: bold; -fx-font-family: 'Segoe UI';" text="0" />
                           </children>
                        </HBox>
                     </children>
                  </HBox>
                  
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
</AnchorPane>