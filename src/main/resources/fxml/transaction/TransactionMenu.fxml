<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIcon?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane style="-fx-background-color: #F5F5F5;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gurukrupa.controller.transaction.TransactionMenuController">

    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;">
            <content>
                <VBox spacing="20.0" style="-fx-padding: 30;">
                    <children>
                        <!-- Transaction Operations Section -->
                        <VBox spacing="16.0">
                            <children>
                                <Label style="-fx-font-family: 'Segoe UI'; -fx-font-weight: 600; -fx-font-size: 18px;" text="Transaction Operations" textFill="#424242" />

                                <!-- Daily Billing Card -->
                                <VBox spacing="12.0" style="-fx-background-color: #FFFFFF; -fx-background-radius: 12; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.08), 8, 0, 0, 3); -fx-padding: 24;">
                                    <children>
                                        <HBox alignment="CENTER_LEFT" spacing="16.0">
                                            <children>
                                                <VBox style="-fx-background-color: #E3F2FD; -fx-background-radius: 12; -fx-padding: 16; -fx-pref-width: 60; -fx-pref-height: 60; -fx-alignment: CENTER;">
                                                    <children>
                                                        <FontAwesomeIcon fill="#1E88E5" glyphName="SHOPPING_CART" size="2.0em" />
                                                    </children>
                                                </VBox>
                                                <VBox spacing="4.0" HBox.hgrow="ALWAYS">
                                                    <children>
                                                        <Label style="-fx-font-family: 'Segoe UI'; -fx-font-weight: 600; -fx-font-size: 16px;" text="Daily Billing" textFill="#212121" />
                                                        <Label style="-fx-font-family: 'Segoe UI'; -fx-font-size: 13px;" text="Create customer bills and manage sales transactions for jewelry and ornaments" textFill="#616161" wrapText="true" />
                                                    </children>
                                                </VBox>
                                                <HBox spacing="12.0">
                                                    <children>
                                                        <Button fx:id="btnBilling" style="-fx-background-color: #1E88E5; -fx-text-fill: white; -fx-font-family: 'Segoe UI'; -fx-font-weight: 600; -fx-background-radius: 8; -fx-padding: 12 20 12 20; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(30,136,229,0.3), 4, 0, 0, 2);" text="CREATE BILL">
                                                            <font>
                                                                <Font size="12.0" />
                                                            </font>
                                                        </Button>
                                                        <Button fx:id="btnViewBills" style="-fx-background-color: transparent; -fx-text-fill: #1E88E5; -fx-font-family: 'Segoe UI'; -fx-font-weight: 600; -fx-background-radius: 8; -fx-padding: 12 20 12 20; -fx-cursor: hand; -fx-border-color: #1E88E5; -fx-border-radius: 8; -fx-border-width: 1.5;" text="VIEW ALL">
                                                            <font>
                                                                <Font size="12.0" />
                                                            </font>
                                                        </Button>
                                                    </children>
                                                </HBox>
                                            </children>
                                        </HBox>
                                    </children>
                                </VBox>

                                <!-- Stock Items Entry Card -->
                                <VBox spacing="12.0" style="-fx-background-color: #FFFFFF; -fx-background-radius: 12; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.08), 8, 0, 0, 3); -fx-padding: 24;">
                                    <children>
                                        <HBox alignment="CENTER_LEFT" spacing="16.0">
                                            <children>
                                                <VBox style="-fx-background-color: #EDE7F6; -fx-background-radius: 12; -fx-padding: 16; -fx-pref-width: 60; -fx-pref-height: 60; -fx-alignment: CENTER;">
                                                    <children>
                                                        <FontAwesomeIcon fill="#6A1B9A" glyphName="CUBES" size="2.0em" />
                                                    </children>
                                                </VBox>
                                                <VBox spacing="4.0" HBox.hgrow="ALWAYS">
                                                    <children>
                                                        <Label style="-fx-font-family: 'Segoe UI'; -fx-font-weight: 600; -fx-font-size: 16px;" text="Stock Items Entry" textFill="#212121" />
                                                        <Label style="-fx-font-family: 'Segoe UI'; -fx-font-size: 13px;" text="Convert purchased metal into jewelry items for stock and sales inventory" textFill="#616161" wrapText="true" />
                                                    </children>
                                                </VBox>
                                                <HBox spacing="12.0">
                                                    <children>
                                                        <Button fx:id="btnStockEntry" style="-fx-background-color: #6A1B9A; -fx-text-fill: white; -fx-font-family: 'Segoe UI'; -fx-font-weight: 600; -fx-background-radius: 8; -fx-padding: 12 20 12 20; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(106,27,154,0.3), 4, 0, 0, 2);" text="ADD ITEMS">
                                                            <font>
                                                                <Font size="12.0" />
                                                            </font>
                                                        </Button>
                                                        <Button fx:id="btnViewStock" style="-fx-background-color: transparent; -fx-text-fill: #6A1B9A; -fx-font-family: 'Segoe UI'; -fx-font-weight: 600; -fx-background-radius: 8; -fx-padding: 12 20 12 20; -fx-cursor: hand; -fx-border-color: #6A1B9A; -fx-border-radius: 8; -fx-border-width: 1.5;" text="VIEW ENTRIES">
                                                            <font>
                                                                <Font size="12.0" />
                                                            </font>
                                                        </Button>
                                                    </children>
                                                </HBox>
                                            </children>
                                        </HBox>
                                    </children>
                                </VBox>

                                <!-- Metal Rates Card -->
                                <VBox spacing="12.0" style="-fx-background-color: #FFFFFF; -fx-background-radius: 12; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.08), 8, 0, 0, 3); -fx-padding: 24;">
                                    <children>
                                        <HBox alignment="CENTER_LEFT" spacing="16.0">
                                            <children>
                                                <VBox style="-fx-background-color: #FFF3E0; -fx-background-radius: 12; -fx-padding: 16; -fx-pref-width: 60; -fx-pref-height: 60; -fx-alignment: CENTER;">
                                                    <children>
                                                        <FontAwesomeIcon fill="#FFB300" glyphName="BALANCE_SCALE" size="2.0em" />
                                                    </children>
                                                </VBox>
                                                <VBox spacing="4.0" HBox.hgrow="ALWAYS">
                                                    <children>
                                                        <Label style="-fx-font-family: 'Segoe UI'; -fx-font-weight: 600; -fx-font-size: 16px;" text="Metal Rates" textFill="#212121" />
                                                        <Label style="-fx-font-family: 'Segoe UI'; -fx-font-size: 13px;" text="Update and manage daily metal rates for accurate pricing calculations in billing" textFill="#616161" wrapText="true" />
                                                    </children>
                                                </VBox>
                                                <HBox spacing="12.0">
                                                    <children>
                                                        <Button fx:id="btnMetalRates" style="-fx-background-color: #FFB300; -fx-text-fill: white; -fx-font-family: 'Segoe UI'; -fx-font-weight: 600; -fx-background-radius: 8; -fx-padding: 12 20 12 20; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(255,179,0,0.3), 4, 0, 0, 2);" text="UPDATE RATES">
                                                            <font>
                                                                <Font size="12.0" />
                                                            </font>
                                                        </Button>
                                                        <Button fx:id="btnViewRates" style="-fx-background-color: transparent; -fx-text-fill: #FFB300; -fx-font-family: 'Segoe UI'; -fx-font-weight: 600; -fx-background-radius: 8; -fx-padding: 12 20 12 20; -fx-cursor: hand; -fx-border-color: #FFB300; -fx-border-radius: 8; -fx-border-width: 1.5;" text="VIEW HISTORY">
                                                            <font>
                                                                <Font size="12.0" />
                                                            </font>
                                                        </Button>
                                                    </children>
                                                </HBox>
                                            </children>
                                        </HBox>
                                    </children>
                                </VBox>
                            </children>
                        </VBox>

                        <!-- Transaction Statistics Section -->
                        <VBox spacing="16.0">
                            <children>
                                <HBox alignment="CENTER_LEFT" spacing="12.0">
                                    <children>
                                        <Label style="-fx-font-family: 'Segoe UI'; -fx-font-weight: 600; -fx-font-size: 18px;" text="Transaction Statistics" textFill="#424242" />
                                        <Button fx:id="btnRefresh" style="-fx-background-color: transparent; -fx-cursor: hand;">
                                            <graphic>
                                                <FontAwesomeIcon fill="#757575" glyphName="REFRESH" size="1.2em" />
                                            </graphic>
                                        </Button>
                                    </children>
                                </HBox>

                                <HBox spacing="20.0">
                                    <children>
                                        <!-- Today's Sales Card -->
                                        <VBox spacing="8.0" style="-fx-background-color: #FFFFFF; -fx-background-radius: 12; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.08), 8, 0, 0, 3); -fx-padding: 20;" HBox.hgrow="ALWAYS">
                                            <children>
                                                <HBox alignment="CENTER_LEFT" spacing="12.0">
                                                    <children>
                                                        <VBox style="-fx-background-color: #E8F5E9; -fx-background-radius: 8; -fx-padding: 10; -fx-pref-width: 40; -fx-pref-height: 40; -fx-alignment: CENTER;">
                                                            <children>
                                                                <FontAwesomeIcon fill="#2E7D32" glyphName="RUPEE" size="1.5em" />
                                                            </children>
                                                        </VBox>
                                                        <Label style="-fx-font-family: 'Segoe UI'; -fx-font-weight: 600; -fx-font-size: 14px;" text="Today's Sales" textFill="#424242" />
                                                    </children>
                                                </HBox>
                                                <Label fx:id="lblTodaySales" style="-fx-font-family: 'Segoe UI'; -fx-font-weight: 700; -fx-font-size: 24px;" text="₹0.00" textFill="#212121" />
                                                <Label style="-fx-font-family: 'Segoe UI'; -fx-font-size: 12px;" text="Collected" textFill="#757575" />
                                                <Label fx:id="lblTodayCollected" style="-fx-font-family: 'Segoe UI'; -fx-font-weight: 600; -fx-font-size: 16px;" text="₹0.00" textFill="#2E7D32" />
                                            </children>
                                        </VBox>

                                        <!-- Today's Bills Card -->
                                        <VBox spacing="8.0" style="-fx-background-color: #FFFFFF; -fx-background-radius: 12; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.08), 8, 0, 0, 3); -fx-padding: 20;" HBox.hgrow="ALWAYS">
                                            <children>
                                                <HBox alignment="CENTER_LEFT" spacing="12.0">
                                                    <children>
                                                        <VBox style="-fx-background-color: #FFF3E0; -fx-background-radius: 8; -fx-padding: 10; -fx-pref-width: 40; -fx-pref-height: 40; -fx-alignment: CENTER;">
                                                            <children>
                                                                <FontAwesomeIcon fill="#F57C00" glyphName="FILE_TEXT" size="1.5em" />
                                                            </children>
                                                        </VBox>
                                                        <Label style="-fx-font-family: 'Segoe UI'; -fx-font-weight: 600; -fx-font-size: 14px;" text="Today's Bills" textFill="#424242" />
                                                    </children>
                                                </HBox>
                                                <Label fx:id="lblTodayBills" style="-fx-font-family: 'Segoe UI'; -fx-font-weight: 700; -fx-font-size: 32px;" text="0" textFill="#212121" />
                                                <Label style="-fx-font-family: 'Segoe UI'; -fx-font-size: 12px;" text="Bills Created" textFill="#757575" />
                                            </children>
                                        </VBox>

                                        <!-- This Month Card -->
                                        <VBox spacing="8.0" style="-fx-background-color: #FFFFFF; -fx-background-radius: 12; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.08), 8, 0, 0, 3); -fx-padding: 20;" HBox.hgrow="ALWAYS">
                                            <children>
                                                <HBox alignment="CENTER_LEFT" spacing="12.0">
                                                    <children>
                                                        <VBox style="-fx-background-color: #E3F2FD; -fx-background-radius: 8; -fx-padding: 10; -fx-pref-width: 40; -fx-pref-height: 40; -fx-alignment: CENTER;">
                                                            <children>
                                                                <FontAwesomeIcon fill="#1976D2" glyphName="CALENDAR" size="1.5em" />
                                                            </children>
                                                        </VBox>
                                                        <Label style="-fx-font-family: 'Segoe UI'; -fx-font-weight: 600; -fx-font-size: 14px;" text="This Month Total" textFill="#424242" />
                                                    </children>
                                                </HBox>
                                                <Label fx:id="lblMonthSales" style="-fx-font-family: 'Segoe UI'; -fx-font-weight: 700; -fx-font-size: 24px;" text="₹0.00" textFill="#212121" />
                                                <Label style="-fx-font-family: 'Segoe UI'; -fx-font-size: 12px;" text="Collected" textFill="#757575" />
                                                <Label fx:id="lblMonthCollected" style="-fx-font-family: 'Segoe UI'; -fx-font-weight: 600; -fx-font-size: 16px;" text="₹0.00" textFill="#1976D2" />
                                            </children>
                                        </VBox>
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                    </children>
                </VBox>
            </content>
        </ScrollPane>
    </center>
</BorderPane>
