<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIcon?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="700.0" prefWidth="1200.0" style="-fx-background-color: #F5F5F5;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gurukrupa.controller.transaction.ViewBillsController">
    <children>
        <VBox spacing="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0" AnchorPane.bottomAnchor="20.0">
            <children>
                <!-- Header -->
                <HBox alignment="CENTER_LEFT" spacing="15.0" style="-fx-background-color: #FFFFFF; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);">
                    <children>
                        <FontAwesomeIcon fill="#1E88E5" glyphName="SEARCH" size="2em" />
                        <Label text="View Bills" style="-fx-font-family: 'Segoe UI'; -fx-font-weight: 700; -fx-text-fill: #333333;">
                            <font>
                                <Font size="24.0" />
                            </font>
                        </Label>
                        <HBox HBox.hgrow="ALWAYS" />
                        <Button fx:id="btnClose" prefWidth="100.0" text="Close" style="-fx-background-color: #E0E0E0; -fx-text-fill: #333333; -fx-font-family: 'Segoe UI'; -fx-font-weight: 600; -fx-background-radius: 5;">
                            <graphic>
                                <FontAwesomeIcon fill="#333333" glyphName="TIMES" />
                            </graphic>
                        </Button>
                    </children>
                </HBox>

                <!-- Search Section -->
                <VBox spacing="15.0" style="-fx-background-color: #FFFFFF; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);">
                    <children>
                        <!-- Customer Search -->
                        <VBox spacing="10.0">
                            <Label text="Customer Search" style="-fx-font-family: 'Segoe UI'; -fx-font-weight: 600; -fx-text-fill: #1E88E5;">
                                <font>
                                    <Font size="16.0" />
                                </font>
                            </Label>
                            <HBox spacing="15.0" alignment="CENTER_LEFT">
                                <children>
                                    <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                        <Label text="Customer Name" style="-fx-font-family: 'Segoe UI'; -fx-text-fill: #666666;">
                                            <font>
                                                <Font size="13.0" />
                                            </font>
                                        </Label>
                                        <TextField fx:id="txtCustomerName" prefHeight="35.0" promptText="Enter customer name" style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #E0E0E0;" />
                                    </VBox>
                                    
                                    <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                        <Label text="Mobile Number" style="-fx-font-family: 'Segoe UI'; -fx-text-fill: #666666;">
                                            <font>
                                                <Font size="13.0" />
                                            </font>
                                        </Label>
                                        <TextField fx:id="txtMobileNo" prefHeight="35.0" promptText="Enter mobile number" style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #E0E0E0;" />
                                    </VBox>
                                    
                                    <VBox alignment="BOTTOM_LEFT">
                                        <Button fx:id="btnSearchCustomer" prefWidth="120.0" prefHeight="35.0" text="Search" style="-fx-background-color: #1E88E5; -fx-text-fill: white; -fx-font-family: 'Segoe UI'; -fx-font-weight: 600; -fx-background-radius: 5;">
                                            <graphic>
                                                <FontAwesomeIcon fill="#FFFFFF" glyphName="SEARCH" />
                                            </graphic>
                                        </Button>
                                    </VBox>
                                </children>
                            </HBox>
                        </VBox>

                        <!-- Customer Info Display -->
                        <HBox fx:id="customerInfoBox" visible="false" managed="false" spacing="30.0" style="-fx-background-color: #E3F2FD; -fx-background-radius: 5; -fx-padding: 15;">
                            <children>
                                <VBox spacing="5.0">
                                    <Label text="Selected Customer" style="-fx-font-family: 'Segoe UI'; -fx-font-weight: 600; -fx-text-fill: #0D47A1;">
                                        <font>
                                            <Font size="14.0" />
                                        </font>
                                    </Label>
                                    <Label fx:id="lblCustomerName" text="Customer Name" style="-fx-font-family: 'Segoe UI'; -fx-text-fill: #1565C0;">
                                        <font>
                                            <Font size="13.0" />
                                        </font>
                                    </Label>
                                    <Label fx:id="lblCustomerMobile" text="Mobile: " style="-fx-font-family: 'Segoe UI'; -fx-text-fill: #1565C0;">
                                        <font>
                                            <Font size="13.0" />
                                        </font>
                                    </Label>
                                </VBox>
                                <HBox HBox.hgrow="ALWAYS" />
                                <VBox alignment="CENTER" spacing="5.0" style="-fx-background-color: #FFFFFF; -fx-background-radius: 5; -fx-padding: 15;">
                                    <children>
                                        <Label text="Pending Amount" style="-fx-font-family: 'Segoe UI'; -fx-font-weight: 600; -fx-text-fill: #D32F2F;">
                                            <font>
                                                <Font size="14.0" />
                                            </font>
                                        </Label>
                                        <Label fx:id="lblPendingAmount" text="â‚¹0.00" style="-fx-font-family: 'Segoe UI'; -fx-font-weight: 700; -fx-text-fill: #D32F2F;">
                                            <font>
                                                <Font size="20.0" />
                                            </font>
                                        </Label>
                                    </children>
                                </VBox>
                            </children>
                        </HBox>

                        <Separator />

                        <!-- Date Filter -->
                        <VBox spacing="10.0">
                            <Label text="Date Filter" style="-fx-font-family: 'Segoe UI'; -fx-font-weight: 600; -fx-text-fill: #1E88E5;">
                                <font>
                                    <Font size="16.0" />
                                </font>
                            </Label>
                            <HBox spacing="15.0" alignment="CENTER_LEFT">
                                <children>
                                    <RadioButton fx:id="rbAllBills" text="All Bills" toggleGroup="$dateFilterGroup" selected="true" style="-fx-font-family: 'Segoe UI';">
                                        <toggleGroup>
                                            <ToggleGroup fx:id="dateFilterGroup" />
                                        </toggleGroup>
                                    </RadioButton>
                                    
                                    <RadioButton fx:id="rbDateRange" text="Date Range" toggleGroup="$dateFilterGroup" style="-fx-font-family: 'Segoe UI';" />
                                    
                                    <HBox spacing="10.0" alignment="CENTER_LEFT" fx:id="dateRangeBox" disable="true">
                                        <children>
                                            <VBox spacing="5.0">
                                                <Label text="From Date" style="-fx-font-family: 'Segoe UI'; -fx-text-fill: #666666;">
                                                    <font>
                                                        <Font size="12.0" />
                                                    </font>
                                                </Label>
                                                <DatePicker fx:id="dpFromDate" prefWidth="150.0" style="-fx-background-radius: 5;" />
                                            </VBox>
                                            
                                            <VBox spacing="5.0">
                                                <Label text="To Date" style="-fx-font-family: 'Segoe UI'; -fx-text-fill: #666666;">
                                                    <font>
                                                        <Font size="12.0" />
                                                    </font>
                                                </Label>
                                                <DatePicker fx:id="dpToDate" prefWidth="150.0" style="-fx-background-radius: 5;" />
                                            </VBox>
                                            
                                            <VBox alignment="BOTTOM_LEFT">
                                                <Button fx:id="btnSearchBills" prefWidth="100.0" prefHeight="30.0" text="Search Bills" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-family: 'Segoe UI'; -fx-font-weight: 600; -fx-background-radius: 5;">
                                                    <graphic>
                                                        <FontAwesomeIcon fill="#FFFFFF" glyphName="FILTER" size="0.9em" />
                                                    </graphic>
                                                </Button>
                                            </VBox>
                                        </children>
                                    </HBox>
                                </children>
                            </HBox>
                        </VBox>
                    </children>
                </VBox>

                <!-- Bills Table -->
                <VBox spacing="10.0" style="-fx-background-color: #FFFFFF; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);" VBox.vgrow="ALWAYS">
                    <children>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <children>
                                <Label text="Bills List" style="-fx-font-family: 'Segoe UI'; -fx-font-weight: 600; -fx-text-fill: #333333;">
                                    <font>
                                        <Font size="18.0" />
                                    </font>
                                </Label>
                                <Label fx:id="lblBillCount" text="(0 bills found)" style="-fx-font-family: 'Segoe UI'; -fx-text-fill: #666666;">
                                    <font>
                                        <Font size="14.0" />
                                    </font>
                                </Label>
                                <HBox HBox.hgrow="ALWAYS" />
                                <Button fx:id="btnRefresh" style="-fx-background-color: transparent; -fx-cursor: hand;">
                                    <graphic>
                                        <FontAwesomeIcon fill="#666666" glyphName="REFRESH" size="1.3em" />
                                    </graphic>
                                </Button>
                            </children>
                        </HBox>
                        
                        <TableView fx:id="billsTable" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="colBillNo" text="Bill No" prefWidth="100.0" />
                                <TableColumn fx:id="colBillDate" text="Date" prefWidth="120.0" />
                                <TableColumn fx:id="colCustomerName" text="Customer" prefWidth="200.0" />
                                <TableColumn fx:id="colMobile" text="Mobile" prefWidth="120.0" />
                                <TableColumn fx:id="colTotalAmount" text="Total Amount" prefWidth="120.0" style="-fx-alignment: CENTER_RIGHT;" />
                                <TableColumn fx:id="colPaidAmount" text="Paid Amount" prefWidth="120.0" style="-fx-alignment: CENTER_RIGHT;" />
                                <TableColumn fx:id="colPendingAmount" text="Pending" prefWidth="120.0" style="-fx-alignment: CENTER_RIGHT;" />
                                <TableColumn fx:id="colPaymentType" text="Payment Type" prefWidth="100.0" />
                                <TableColumn fx:id="colActions" text="Actions" prefWidth="150.0" />
                            </columns>
                            <placeholder>
                                <Label text="No bills found. Search for a customer to view their bills." style="-fx-font-family: 'Segoe UI'; -fx-text-fill: #999999;">
                                    <font>
                                        <Font size="14.0" />
                                    </font>
                                </Label>
                            </placeholder>
                        </TableView>
                    </children>
                </VBox>
            </children>
        </VBox>
    </children>
</AnchorPane>