<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIcon?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane fx:id="mainPane" minHeight="720.0" minWidth="1280.0" style="-fx-background-color: #F5F5F5;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gurukrupa.controller.DashboardController">
    <left>
        <VBox minWidth="320.0" prefWidth="320.0" maxWidth="320.0" style="-fx-background-color: #FFFFFF; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.12), 20, 0, 4, 0);" BorderPane.alignment="CENTER">
            <children>
                <ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: transparent; -fx-background: transparent;" VBox.vgrow="ALWAYS">
                    <content>
                        <VBox spacing="8.0" style="-fx-padding: 20 16 24 16; -fx-background-color: #FFFFFF;">
                            <children>
                                <!-- Dashboard Menu -->
                                <HBox fx:id="menuDashboard" alignment="CENTER_LEFT" prefHeight="60.0" style="-fx-background-color: #2196F3; -fx-background-radius: 12; -fx-cursor: hand;">
                                    <children>
                                        <StackPane prefWidth="50.0" alignment="CENTER">
                                            <children>
                                                <FontAwesomeIcon fill="WHITE" glyphName="DASHBOARD" size="2.0em" />
                                            </children>
                                        </StackPane>
                                        <Text fontSmoothingType="LCD" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-family: 'Segoe UI'; -fx-font-weight: 700; -fx-font-size: 16px;" fill="WHITE" text="Dashboard" />
                                    </children>
                                    <padding>
                                        <Insets bottom="12.0" left="12.0" right="20.0" top="12.0" />
                                    </padding>
                                    <VBox.margin>
                                        <Insets bottom="6.0" left="8.0" right="8.0" top="8.0" />
                                    </VBox.margin>
                                    <effect>
                                        <DropShadow color="#2196F366" radius="12.0" offsetY="3.0" />
                                    </effect>
                                </HBox>

                                <!-- Purchase Menu -->
                                <HBox fx:id="menuPurchase" alignment="CENTER_LEFT" prefHeight="60.0" style="-fx-background-color: #FAFAFA; -fx-background-radius: 12; -fx-cursor: hand;">
                                    <children>
                                        <StackPane prefWidth="50.0" alignment="CENTER">
                                            <children>
                                                <FontAwesomeIcon fill="#616161" glyphName="TRUCK" size="2.0em" />
                                            </children>
                                        </StackPane>
                                        <Text fontSmoothingType="LCD" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-family: 'Segoe UI'; -fx-font-weight: 600; -fx-font-size: 16px;" fill="#424242" text="Purchase" />
                                    </children>
                                    <padding>
                                        <Insets bottom="12.0" left="12.0" right="20.0" top="12.0" />
                                    </padding>
                                    <VBox.margin>
                                        <Insets bottom="6.0" left="8.0" right="8.0" />
                                    </VBox.margin>
                                </HBox>

                                <!-- Daily Billing Menu -->
                                <HBox fx:id="menuTransaction" alignment="CENTER_LEFT" prefHeight="60.0" style="-fx-background-color: #FAFAFA; -fx-background-radius: 12; -fx-cursor: hand;">
                                    <children>
                                        <StackPane prefWidth="50.0" alignment="CENTER">
                                            <children>
                                                <FontAwesomeIcon fill="#616161" glyphName="SHOPPING_CART" size="2.0em" />
                                            </children>
                                        </StackPane>
                                        <Text fontSmoothingType="LCD" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-family: 'Segoe UI'; -fx-font-weight: 600; -fx-font-size: 16px;" fill="#424242" text="Daily Billing" />
                                    </children>
                                    <padding>
                                        <Insets bottom="12.0" left="12.0" right="20.0" top="12.0" />
                                    </padding>
                                    <VBox.margin>
                                        <Insets bottom="6.0" left="8.0" right="8.0" />
                                    </VBox.margin>
                                </HBox>
                                
                                <!-- Master Menu -->
                                <HBox fx:id="menuMaster" alignment="CENTER_LEFT" prefHeight="60.0" style="-fx-background-color: #FAFAFA; -fx-background-radius: 12; -fx-cursor: hand;">
                                    <children>
                                        <StackPane prefWidth="50.0" alignment="CENTER">
                                            <children>
                                                <FontAwesomeIcon fill="#616161" glyphName="DATABASE" size="2.0em" />
                                            </children>
                                        </StackPane>
                                        <Text fontSmoothingType="LCD" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-family: 'Segoe UI'; -fx-font-weight: 600; -fx-font-size: 16px;" fill="#424242" text="Master" />
                                    </children>
                                    <padding>
                                        <Insets bottom="12.0" left="12.0" right="20.0" top="12.0" />
                                    </padding>
                                    <VBox.margin>
                                        <Insets bottom="6.0" left="8.0" right="8.0" />
                                    </VBox.margin>
                                </HBox>
                                
                                <!-- Reports Menu -->
                                <HBox fx:id="menuReport" alignment="CENTER_LEFT" prefHeight="60.0" style="-fx-background-color: #FAFAFA; -fx-background-radius: 12; -fx-cursor: hand;">
                                    <children>
                                        <StackPane prefWidth="50.0" alignment="CENTER">
                                            <children>
                                                <FontAwesomeIcon fill="#616161" glyphName="BAR_CHART" size="2.0em" />
                                            </children>
                                        </StackPane>
                                        <Text fontSmoothingType="LCD" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-family: 'Segoe UI'; -fx-font-weight: 600; -fx-font-size: 16px;" fill="#424242" text="Reports" />
                                    </children>
                                    <padding>
                                        <Insets bottom="12.0" left="12.0" right="20.0" top="12.0" />
                                    </padding>
                                    <VBox.margin>
                                        <Insets bottom="6.0" left="8.0" right="8.0" />
                                    </VBox.margin>
                                </HBox>
                                
                                <!-- Spacer to push System section to bottom -->
                                <Region VBox.vgrow="ALWAYS" minHeight="60.0" />
                                
                                <!-- System Section Header -->
                                <Label text="SYSTEM" style="-fx-font-family: 'Segoe UI'; -fx-font-weight: 700; -fx-font-size: 14px; -fx-text-fill: #757575;">
                                    <VBox.margin>
                                        <Insets bottom="16.0" left="20.0" top="24.0" />
                                    </VBox.margin>
                                </Label>
                                
                                <!-- Settings Menu -->
                                <HBox fx:id="menuSettings" alignment="CENTER_LEFT" prefHeight="60.0" style="-fx-background-color: #FAFAFA; -fx-background-radius: 12; -fx-cursor: hand;">
                                    <children>
                                        <StackPane prefWidth="50.0" alignment="CENTER">
                                            <children>
                                                <FontAwesomeIcon fill="#616161" glyphName="COG" size="2.0em" />
                                            </children>
                                        </StackPane>
                                        <Text fontSmoothingType="LCD" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-family: 'Segoe UI'; -fx-font-weight: 600; -fx-font-size: 16px;" fill="#424242" text="Settings" />
                                    </children>
                                    <padding>
                                        <Insets bottom="12.0" left="12.0" right="20.0" top="12.0" />
                                    </padding>
                                    <VBox.margin>
                                        <Insets bottom="6.0" left="8.0" right="8.0" />
                                    </VBox.margin>
                                </HBox>
                                
                                <!-- Support Menu -->
                                <HBox fx:id="menuSupport" alignment="CENTER_LEFT" prefHeight="60.0" style="-fx-background-color: #FAFAFA; -fx-background-radius: 12; -fx-cursor: hand;">
                                    <children>
                                        <StackPane prefWidth="50.0" alignment="CENTER">
                                            <children>
                                                <FontAwesomeIcon fill="#616161" glyphName="QUESTION_CIRCLE" size="2.0em" />
                                            </children>
                                        </StackPane>
                                        <Text fontSmoothingType="LCD" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-family: 'Segoe UI'; -fx-font-weight: 600; -fx-font-size: 16px;" fill="#424242" text="Support" />
                                    </children>
                                    <padding>
                                        <Insets bottom="12.0" left="12.0" right="20.0" top="12.0" />
                                    </padding>
                                    <VBox.margin>
                                        <Insets bottom="6.0" left="8.0" right="8.0" />
                                    </VBox.margin>
                                </HBox>
                                
                                <!-- Logout Button -->
                                <HBox fx:id="menuExit" alignment="CENTER_LEFT" prefHeight="60.0" style="-fx-background-color: #F44336; -fx-background-radius: 12; -fx-cursor: hand;">
                                    <children>
                                        <StackPane prefWidth="50.0" alignment="CENTER">
                                            <children>
                                                <FontAwesomeIcon fill="WHITE" glyphName="SIGN_OUT" size="2.0em" />
                                            </children>
                                        </StackPane>
                                        <Text fontSmoothingType="LCD" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-family: 'Segoe UI'; -fx-font-weight: 700; -fx-font-size: 16px;" fill="WHITE" text="Logout" />
                                    </children>
                                    <padding>
                                        <Insets bottom="12.0" left="12.0" right="20.0" top="12.0" />
                                    </padding>
                                    <VBox.margin>
                                        <Insets bottom="24.0" left="8.0" right="8.0" top="16.0" />
                                    </VBox.margin>
                                    <effect>
                                        <DropShadow color="#F4433666" radius="12.0" offsetY="3.0" />
                                    </effect>
                                </HBox>
                            </children>
                        </VBox>
                    </content>
                </ScrollPane>
            </children>
        </VBox>
    </left>
    <top>
        <AnchorPane prefHeight="80.0" style="-fx-background-color: #1976D2;" BorderPane.alignment="CENTER">
            <children>
                <!-- Right side - User info with modern card design -->
                <HBox alignment="CENTER_RIGHT" spacing="20.0" style="-fx-padding: 0 32 0 0;" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0">
                    <children>
                        <VBox alignment="CENTER" style="-fx-background-color: #1565C0; -fx-background-radius: 16; -fx-padding: 12 24 12 24;">
                            <children>
                                <HBox alignment="CENTER" spacing="16.0">
                                    <children>
                                        <StackPane prefWidth="44.0" prefHeight="44.0" style="-fx-background-color: #0D47A1; -fx-background-radius: 22;">
                                            <children>
                                                <FontAwesomeIcon fill="WHITE" glyphName="USER" size="2.0em" />
                                            </children>
                                        </StackPane>
                                        <VBox alignment="CENTER_LEFT" spacing="2.0">
                                            <children>
                                                <Label text="Welcome" style="-fx-font-family: 'Segoe UI'; -fx-font-weight: 400; -fx-font-size: 12px;" textFill="#E3F2FD" />
                                                <Text fx:id="txtUserName" strokeType="OUTSIDE" strokeWidth="0.0" text="User Name" style="-fx-font-family: 'Segoe UI'; -fx-font-weight: 700; -fx-font-size: 16px;" fill="WHITE" />
                                            </children>
                                        </VBox>
                                    </children>
                                </HBox>
                            </children>
                            <effect>
                                <DropShadow color="#00000033" radius="8.0" offsetY="2.0" />
                            </effect>
                        </VBox>
                    </children>
                </HBox>
                
                <!-- Center - Current menu label -->
                <HBox alignment="CENTER" AnchorPane.leftAnchor="340.0" AnchorPane.rightAnchor="340.0" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0">
                    <children>
                        <Label fx:id="lblCurrentMenu" text="Dashboard" style="-fx-font-family: 'Segoe UI'; -fx-font-weight: 700; -fx-font-size: 24px;" textFill="WHITE" />
                    </children>
                </HBox>
                
                <!-- Left side - Shop name with modern branding -->
                <HBox alignment="CENTER_LEFT" spacing="20.0" AnchorPane.leftAnchor="32.0" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0">
                    <children>
                        <FontAwesomeIcon fill="WHITE" glyphName="DIAMOND" size="3.0em" />
                        <VBox alignment="CENTER_LEFT" spacing="2.0">
                            <children>
                                <Label fx:id="lblShopeeName" text="Gurukrupa Jewelry" style="-fx-font-family: 'Segoe UI'; -fx-font-weight: 700; -fx-font-size: 24px;" textFill="WHITE" />
                                <Label text="Jewelry Management System" style="-fx-font-family: 'Segoe UI'; -fx-font-weight: 500; -fx-font-size: 14px;" textFill="#E3F2FD" />
                            </children>
                        </VBox>
                    </children>
                </HBox>
            </children>
        </AnchorPane>
    </top>
    <center>
        <!-- Content area with light background for loaded content -->
        <AnchorPane style="-fx-background-color: #F5F5F5; -fx-padding: 20;" BorderPane.alignment="CENTER" />
    </center>
</BorderPane>