<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Text?>

<BorderPane stylesheets="@../css/create_shope.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gurukrupa.controller.CreateShopeController">
    <top>
        <Pane prefHeight="47.0" prefWidth="830.0" BorderPane.alignment="CENTER">
            <children>
                <Text layoutX="343.0" layoutY="28.0" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #333;" text="Shop Registration Form" />
            </children>
        </Pane>
    </top>
    <center>
        <AnchorPane prefHeight="650.0" prefWidth="830.0" style="-fx-background-color: #f9fafb;">
            <Pane layoutX="181.0" layoutY="24.0" prefHeight="498.0" prefWidth="435.0">
                <children>
                    <Label layoutY="10.0" styleClass="form-label" text="Shop Name:" />
                    <TextField fx:id="txtShopName" layoutX="155.0" prefHeight="38.0" prefWidth="280.0" promptText="Enter Shop Name" styleClass="form-input" />

                    <Label layoutY="50.0" styleClass="form-label" text="Shop Address:" />
                    <TextField fx:id="txtShopAddress" layoutX="155.0" layoutY="50.0" prefHeight="38.0" prefWidth="280.0" promptText="Enter Shop Address" styleClass="form-input" />

                    <Label layoutY="100.0" styleClass="form-label" text="Shop Contact No:" />
                    <TextField fx:id="txtShopContact" layoutX="155.0" layoutY="100.0" prefHeight="38.0" prefWidth="280.0" promptText="Enter Contact Number" styleClass="form-input" />

                    <Label layoutY="150.0" styleClass="form-label" text="Shop License Key:" />
                    <TextField fx:id="txtShoplicense" layoutX="155.0" layoutY="150.0" prefHeight="38.0" prefWidth="280.0" promptText="Enter License Key" styleClass="form-input" />

                    <Label layoutY="200.0" styleClass="form-label" text="Shop Owner Name:" />
                    <TextField fx:id="txtWonerName" layoutX="155.0" layoutY="200.0" prefHeight="38.0" prefWidth="280.0" promptText="Enter Owner Name" styleClass="form-input" />

                    <Label layoutY="250.0" styleClass="form-label" text="Shop Owner Mobile No:" />
                    <TextField fx:id="txtWonerContact" layoutX="155.0" layoutY="250.0" prefHeight="38.0" prefWidth="280.0" promptText="Enter Owner Mobile Number" styleClass="form-input" />

                    <Label layoutY="300.0" styleClass="form-label" text="Admin Password:" />
                    <PasswordField fx:id="txtPassword" layoutX="155.0" layoutY="300.0" prefHeight="38.0" prefWidth="280.0" promptText="Enter Password" styleClass="form-input" />

                    <Label layoutY="350.0" styleClass="form-label" text="Confirm Password:" />
                    <PasswordField fx:id="txtConfirmPassword" layoutX="155.0" layoutY="350.0" prefHeight="38.0" prefWidth="280.0" promptText="Confirm Password" styleClass="form-input" />

                    <HBox alignment="CENTER" layoutX="82.0" layoutY="423.0" prefHeight="46.0" prefWidth="301.0" spacing="50.0">
                        <children>
                            <Button fx:id="registerButton" styleClass="form-button" text="Register" />
                            <Button fx:id="cancelButton" styleClass="form-button-cancel" text="Cancel" />
                        </children>
                    </HBox>
                </children>
            </Pane>
        </AnchorPane>
    </center>
</BorderPane>
