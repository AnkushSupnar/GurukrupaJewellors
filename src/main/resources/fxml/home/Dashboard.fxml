<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIcon?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane fx:id="mainPane" minHeight="680.0" minWidth="1200.0" style="-fx-background-color: #ECEFF1;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gurukrupa.controller.DashboardController">
    <left>
        <VBox minWidth="280.0" prefWidth="280.0" maxWidth="280.0" style="-fx-background-color: #FFFFFF; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.10), 8, 0, 2, 0);" BorderPane.alignment="CENTER">
            <children>
                <ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: transparent; -fx-background: transparent;" VBox.vgrow="ALWAYS">
                    <content>
                        <VBox spacing="4.0" style="-fx-padding: 20; -fx-background-color: #FFFFFF;">
                            <children>
                                <!-- Navigation Section -->
                                <Label text="NAVIGATION" style="-fx-font-family: 'Segoe UI'; -fx-font-weight: 700; -fx-font-size: 12px;" textFill="#757575">
                                    <VBox.margin>
                                        <Insets bottom="16.0" left="16.0" top="20.0" />
                                    </VBox.margin>
                                </Label>
                                
                                <!-- Dashboard Menu -->
                                <HBox fx:id="menuDashboard" alignment="CENTER_LEFT" prefHeight="52.0" style="-fx-background-color: transparent; -fx-background-radius: 8; -fx-cursor: hand;">
                                    <children>
                                        <FontAwesomeIcon fill="#757575" glyphName="DASHBOARD" size="1.6em">
                                            <HBox.margin>
                                                <Insets left="16.0" right="16.0" />
                                            </HBox.margin>
                                        </FontAwesomeIcon>
                                        <Text fontSmoothingType="LCD" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-family: 'Segoe UI'; -fx-font-weight: 500; -fx-font-size: 14px;" fill="#424242" text="Dashboard" />
                                    </children>
                                    <padding>
                                        <Insets bottom="12.0" left="8.0" right="16.0" top="12.0" />
                                    </padding>
                                    <VBox.margin>
                                        <Insets bottom="2.0" left="8.0" right="8.0" top="2.0" />
                                    </VBox.margin>
                                </HBox>
                                
                                <!-- Billing Menu -->
                                <HBox fx:id="menuDashboard1" alignment="CENTER_LEFT" prefHeight="52.0" style="-fx-background-color: transparent; -fx-background-radius: 8; -fx-cursor: hand;">
                                    <children>
                                        <FontAwesomeIcon fill="#757575" glyphName="CREDIT_CARD" size="1.6em">
                                            <HBox.margin>
                                                <Insets left="16.0" right="16.0" />
                                            </HBox.margin>
                                        </FontAwesomeIcon>
                                        <Text fontSmoothingType="LCD" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-family: 'Segoe UI'; -fx-font-weight: 500; -fx-font-size: 14px;" fill="#424242" text="Billing" />
                                    </children>
                                    <padding>
                                        <Insets bottom="12.0" left="8.0" right="16.0" top="12.0" />
                                    </padding>
                                    <VBox.margin>
                                        <Insets bottom="2.0" left="8.0" right="8.0" top="2.0" />
                                    </VBox.margin>
                                </HBox>
                                
                                <!-- Transaction Menu -->
                                <HBox fx:id="menuTransaction" alignment="CENTER_LEFT" prefHeight="52.0" style="-fx-background-color: transparent; -fx-background-radius: 8; -fx-cursor: hand;">
                                    <children>
                                        <FontAwesomeIcon fill="#757575" glyphName="EXCHANGE" size="1.6em">
                                            <HBox.margin>
                                                <Insets left="16.0" right="16.0" />
                                            </HBox.margin>
                                        </FontAwesomeIcon>
                                        <Text fontSmoothingType="LCD" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-family: 'Segoe UI'; -fx-font-weight: 500; -fx-font-size: 14px;" fill="#424242" text="Transaction" />
                                    </children>
                                    <padding>
                                        <Insets bottom="12.0" left="8.0" right="16.0" top="12.0" />
                                    </padding>
                                    <VBox.margin>
                                        <Insets bottom="2.0" left="8.0" right="8.0" top="2.0" />
                                    </VBox.margin>
                                </HBox>
                                
                                <!-- Master Menu -->
                                <HBox fx:id="menuMaster" alignment="CENTER_LEFT" prefHeight="52.0" style="-fx-background-color: transparent; -fx-background-radius: 8; -fx-cursor: hand;">
                                    <children>
                                        <FontAwesomeIcon fill="#757575" glyphName="DATABASE" size="1.6em">
                                            <HBox.margin>
                                                <Insets left="16.0" right="16.0" />
                                            </HBox.margin>
                                        </FontAwesomeIcon>
                                        <Text fontSmoothingType="LCD" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-family: 'Segoe UI'; -fx-font-weight: 500; -fx-font-size: 14px;" fill="#424242" text="Master" />
                                    </children>
                                    <padding>
                                        <Insets bottom="12.0" left="8.0" right="16.0" top="12.0" />
                                    </padding>
                                    <VBox.margin>
                                        <Insets bottom="2.0" left="8.0" right="8.0" top="2.0" />
                                    </VBox.margin>
                                </HBox>
                                
                                <!-- Reports Menu -->
                                <HBox fx:id="menuReport" alignment="CENTER_LEFT" prefHeight="52.0" style="-fx-background-color: transparent; -fx-background-radius: 8; -fx-cursor: hand;">
                                    <children>
                                        <FontAwesomeIcon fill="#757575" glyphName="BAR_CHART" size="1.6em">
                                            <HBox.margin>
                                                <Insets left="16.0" right="16.0" />
                                            </HBox.margin>
                                        </FontAwesomeIcon>
                                        <Text fontSmoothingType="LCD" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-family: 'Segoe UI'; -fx-font-weight: 500; -fx-font-size: 14px;" fill="#424242" text="Reports" />
                                    </children>
                                    <padding>
                                        <Insets bottom="12.0" left="8.0" right="16.0" top="12.0" />
                                    </padding>
                                    <VBox.margin>
                                        <Insets bottom="2.0" left="8.0" right="8.0" top="2.0" />
                                    </VBox.margin>
                                </HBox>
                                
                                <!-- Spacer to push System section to bottom -->
                                <Region VBox.vgrow="ALWAYS" minHeight="50.0" />
                                
                                <!-- System Section -->
                                <Label text="SYSTEM" style="-fx-font-family: 'Segoe UI'; -fx-font-weight: 700; -fx-font-size: 12px;" textFill="#757575">
                                    <VBox.margin>
                                        <Insets bottom="12.0" left="16.0" top="20.0" />
                                    </VBox.margin>
                                </Label>
                                
                                <!-- Settings Menu -->
                                <HBox fx:id="menuSettings" alignment="CENTER_LEFT" prefHeight="52.0" style="-fx-background-color: transparent; -fx-background-radius: 8; -fx-cursor: hand;">
                                    <children>
                                        <FontAwesomeIcon fill="#757575" glyphName="COG" size="1.6em">
                                            <HBox.margin>
                                                <Insets left="16.0" right="16.0" />
                                            </HBox.margin>
                                        </FontAwesomeIcon>
                                        <Text fontSmoothingType="LCD" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-family: 'Segoe UI'; -fx-font-weight: 500; -fx-font-size: 14px;" fill="#424242" text="Settings" />
                                    </children>
                                    <padding>
                                        <Insets bottom="12.0" left="8.0" right="16.0" top="12.0" />
                                    </padding>
                                    <VBox.margin>
                                        <Insets bottom="2.0" left="8.0" right="8.0" top="2.0" />
                                    </VBox.margin>
                                </HBox>
                                
                                <!-- Support Menu -->
                                <HBox fx:id="menuSupport" alignment="CENTER_LEFT" prefHeight="52.0" style="-fx-background-color: transparent; -fx-background-radius: 8; -fx-cursor: hand;">
                                    <children>
                                        <FontAwesomeIcon fill="#757575" glyphName="QUESTION_CIRCLE" size="1.6em">
                                            <HBox.margin>
                                                <Insets left="16.0" right="16.0" />
                                            </HBox.margin>
                                        </FontAwesomeIcon>
                                        <Text fontSmoothingType="LCD" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-family: 'Segoe UI'; -fx-font-weight: 500; -fx-font-size: 14px;" fill="#424242" text="Support" />
                                    </children>
                                    <padding>
                                        <Insets bottom="12.0" left="8.0" right="16.0" top="12.0" />
                                    </padding>
                                    <VBox.margin>
                                        <Insets bottom="2.0" left="8.0" right="8.0" top="2.0" />
                                    </VBox.margin>
                                </HBox>
                                
                                <!-- Logout Button -->
                                <HBox fx:id="menuExit" alignment="CENTER_LEFT" prefHeight="52.0" style="-fx-background-color: #D32F2F; -fx-background-radius: 8; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(211,47,47,0.3), 4, 0, 0, 2);">
                                    <children>
                                        <FontAwesomeIcon fill="#FFFFFF" glyphName="SIGN_OUT" size="1.6em">
                                            <HBox.margin>
                                                <Insets left="16.0" right="16.0" />
                                            </HBox.margin>
                                        </FontAwesomeIcon>
                                        <Text fontSmoothingType="LCD" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-family: 'Segoe UI'; -fx-font-weight: 600; -fx-font-size: 14px;" fill="#FFFFFF" text="Logout" />
                                    </children>
                                    <padding>
                                        <Insets bottom="12.0" left="8.0" right="16.0" top="12.0" />
                                    </padding>
                                    <VBox.margin>
                                        <Insets bottom="20.0" left="8.0" right="8.0" top="8.0" />
                                    </VBox.margin>
                                </HBox>
                            </children>
                        </VBox>
                    </content>
                </ScrollPane>
            </children>
        </VBox>
    </left>
    <top>
        <AnchorPane prefHeight="72.0" style="-fx-background-color: #3F51B5; -fx-effect: dropshadow(three-pass-box, rgba(63,81,181,0.3), 8, 0, 0, 4);" BorderPane.alignment="CENTER">
            <children>
                <!-- Right side - User info -->
                <HBox alignment="CENTER_RIGHT" spacing="16.0" style="-fx-padding: 0 24 0 0;" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0">
                    <children>
                        <HBox alignment="CENTER" spacing="12.0" style="-fx-background-color: rgba(255,255,255,0.15); -fx-background-radius: 20; -fx-padding: 8 16 8 16; -fx-border-color: rgba(255,255,255,0.2); -fx-border-radius: 20; -fx-border-width: 1;">
                            <children>
                                <FontAwesomeIcon fill="#FFFFFF" glyphName="USER" size="1.8em" />
                                <Text fx:id="txtUserName" strokeType="OUTSIDE" strokeWidth="0.0" text="User Name" style="-fx-font-family: 'Segoe UI'; -fx-font-weight: 500;" fill="#FFFFFF">
                                    <font>
                                        <Font size="14.0" />
                                    </font>
                                </Text>
                            </children>
                        </HBox>
                    </children>
                </HBox>
                
                <!-- Center - Current menu label -->
                <HBox alignment="CENTER" AnchorPane.leftAnchor="290.0" AnchorPane.rightAnchor="290.0" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0">
                    <children>
                        <VBox alignment="CENTER" style="-fx-background-color: #303F9F; -fx-background-radius: 12; -fx-padding: 8 24 8 24; -fx-effect: dropshadow(three-pass-box, rgba(48,63,159,0.4), 6, 0, 0, 2);">
                            <children>
                                <Label fx:id="lblCurrentMenu" text="Dashboard" style="-fx-font-family: 'Segoe UI'; -fx-font-weight: 600;" textFill="#FFFFFF">
                                    <font>
                                        <Font size="18.0" />
                                    </font>
                                </Label>
                            </children>
                        </VBox>
                    </children>
                </HBox>
                
                <!-- Left side - Shop name -->
                <HBox alignment="CENTER_LEFT" spacing="16.0" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0">
                    <children>
                        <FontAwesomeIcon fill="#FFFFFF" glyphName="DIAMOND" size="2.4em" />
                        <VBox alignment="CENTER_LEFT">
                            <children>
                                <Label fx:id="lblShopeeName" text="Gurukrupa Jewelry" style="-fx-font-family: 'Segoe UI'; -fx-font-weight: 700;" textFill="#FFFFFF">
                                    <font>
                                        <Font size="20.0" />
                                    </font>
                                </Label>
                                <Label text="Jewelry Management System" style="-fx-font-family: 'Segoe UI'; -fx-font-weight: 400;" textFill="rgba(255,255,255,0.8)">
                                    <font>
                                        <Font size="12.0" />
                                    </font>
                                </Label>
                            </children>
                        </VBox>
                    </children>
                </HBox>
            </children>
        </AnchorPane>
    </top>
    <center>
        <!-- Content area - this is where the different screens will be loaded -->
        <AnchorPane style="-fx-background-color: #ECEFF1;" BorderPane.alignment="CENTER" />
    </center>
</BorderPane>