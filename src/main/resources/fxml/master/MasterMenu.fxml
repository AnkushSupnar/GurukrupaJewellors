<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIcon?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane style="-fx-background-color: #F5F5F5;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gurukrupa.controller.master.JewelryItemMenuController">
   <top>
      <!-- Header -->
      <HBox alignment="CENTER_LEFT" style="-fx-background-color: #1976D2; -fx-padding: 20;" spacing="16.0">
         <children>
            <FontAwesomeIcon fill="#FFFFFF" glyphName="BRIEFCASE" size="2.0em" />
            <Label text="Master Data Management" style="-fx-font-family: 'Segoe UI'; -fx-font-weight: 700;" textFill="#FFFFFF">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
         </children>
      </HBox>
   </top>
   
   <center>
      <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;">
         <content>
            <VBox spacing="20.0" style="-fx-padding: 30;">
               <children>
                  <!-- Inventory Management Section -->
                  <VBox spacing="16.0">
                     <children>
                        <Label text="Inventory Management" style="-fx-font-family: 'Segoe UI'; -fx-font-weight: 600; -fx-font-size: 18px;" textFill="#424242" />
                        
                        <!-- Jewelry Items Card -->
                        <VBox style="-fx-background-color: #FFFFFF; -fx-background-radius: 12; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.08), 8, 0, 0, 3); -fx-padding: 24;" spacing="12.0">
                           <children>
                              <HBox alignment="CENTER_LEFT" spacing="16.0">
                                 <children>
                                    <VBox style="-fx-background-color: #E3F2FD; -fx-background-radius: 12; -fx-padding: 16; -fx-pref-width: 60; -fx-pref-height: 60; -fx-alignment: CENTER;">
                                       <children>
                                          <FontAwesomeIcon fill="#1976D2" glyphName="GEM" size="2.0em" />
                                       </children>
                                    </VBox>
                                    <VBox spacing="4.0" HBox.hgrow="ALWAYS">
                                       <children>
                                          <Label text="Jewelry Items" style="-fx-font-family: 'Segoe UI'; -fx-font-weight: 600; -fx-font-size: 16px;" textFill="#212121" />
                                          <Label text="Manage jewelry items, add new products and track inventory" style="-fx-font-family: 'Segoe UI'; -fx-font-size: 13px;" textFill="#616161" wrapText="true" />
                                       </children>
                                    </VBox>
                                    <HBox spacing="12.0">
                                       <children>
                                          <Button fx:id="btnAddItem" text="ADD ITEM" style="-fx-background-color: #1976D2; -fx-text-fill: white; -fx-font-family: 'Segoe UI'; -fx-font-weight: 600; -fx-background-radius: 8; -fx-padding: 12 20 12 20; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(25,118,210,0.3), 4, 0, 0, 2);">
                                             <font>
                                                <Font size="12.0" />
                                             </font>
                                          </Button>
                                          <Button fx:id="btnViewItems" text="VIEW ALL" style="-fx-background-color: transparent; -fx-text-fill: #1976D2; -fx-font-family: 'Segoe UI'; -fx-font-weight: 600; -fx-background-radius: 8; -fx-padding: 12 20 12 20; -fx-cursor: hand; -fx-border-color: #1976D2; -fx-border-radius: 8; -fx-border-width: 1.5;">
                                             <font>
                                                <Font size="12.0" />
                                             </font>
                                          </Button>
                                       </children>
                                    </HBox>
                                 </children>
                              </HBox>
                           </children>
                        </VBox>
                        
                        <!-- Categories Card -->
                        <VBox style="-fx-background-color: #FFFFFF; -fx-background-radius: 12; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.08), 8, 0, 0, 3); -fx-padding: 24;" spacing="12.0">
                           <children>
                              <HBox alignment="CENTER_LEFT" spacing="16.0">
                                 <children>
                                    <VBox style="-fx-background-color: #E0F2F1; -fx-background-radius: 12; -fx-padding: 16; -fx-pref-width: 60; -fx-pref-height: 60; -fx-alignment: CENTER;">
                                       <children>
                                          <FontAwesomeIcon fill="#00796B" glyphName="TAGS" size="2.0em" />
                                       </children>
                                    </VBox>
                                    <VBox spacing="4.0" HBox.hgrow="ALWAYS">
                                       <children>
                                          <Label text="Categories" style="-fx-font-family: 'Segoe UI'; -fx-font-weight: 600; -fx-font-size: 16px;" textFill="#212121" />
                                          <Label text="Organize your products into categories for better management" style="-fx-font-family: 'Segoe UI'; -fx-font-size: 13px;" textFill="#616161" wrapText="true" />
                                       </children>
                                    </VBox>
                                    <HBox spacing="12.0">
                                       <children>
                                          <Button fx:id="btnAddCategory" text="ADD CATEGORY" style="-fx-background-color: #00796B; -fx-text-fill: white; -fx-font-family: 'Segoe UI'; -fx-font-weight: 600; -fx-background-radius: 8; -fx-padding: 12 20 12 20; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(0,121,107,0.3), 4, 0, 0, 2);">
                                             <font>
                                                <Font size="12.0" />
                                             </font>
                                          </Button>
                                          <Button fx:id="btnViewCategories" text="MANAGE" style="-fx-background-color: transparent; -fx-text-fill: #00796B; -fx-font-family: 'Segoe UI'; -fx-font-weight: 600; -fx-background-radius: 8; -fx-padding: 12 20 12 20; -fx-cursor: hand; -fx-border-color: #00796B; -fx-border-radius: 8; -fx-border-width: 1.5;">
                                             <font>
                                                <Font size="12.0" />
                                             </font>
                                          </Button>
                                       </children>
                                    </HBox>
                                 </children>
                              </HBox>
                           </children>
                        </VBox>

                        <!-- Metal Types Card -->
                        <VBox style="-fx-background-color: #FFFFFF; -fx-background-radius: 12; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.08), 8, 0, 0, 3); -fx-padding: 24;" spacing="12.0">
                           <children>
                              <HBox alignment="CENTER_LEFT" spacing="16.0">
                                 <children>
                                    <VBox style="-fx-background-color: #FFF3E0; -fx-background-radius: 12; -fx-padding: 16; -fx-pref-width: 60; -fx-pref-height: 60; -fx-alignment: CENTER;">
                                       <children>
                                          <FontAwesomeIcon fill="#F57C00" glyphName="CUBES" size="2.0em" />
                                       </children>
                                    </VBox>
                                    <VBox spacing="4.0" HBox.hgrow="ALWAYS">
                                       <children>
                                          <Label text="Metal Types" style="-fx-font-family: 'Segoe UI'; -fx-font-weight: 600; -fx-font-size: 16px;" textFill="#212121" />
                                          <Label text="Configure different metal types and their properties" style="-fx-font-family: 'Segoe UI'; -fx-font-size: 13px;" textFill="#616161" wrapText="true" />
                                       </children>
                                    </VBox>
                                    <HBox spacing="12.0">
                                       <children>
                                          <Button fx:id="btnAddMetal" text="ADD METAL" style="-fx-background-color: #F57C00; -fx-text-fill: white; -fx-font-family: 'Segoe UI'; -fx-font-weight: 600; -fx-background-radius: 8; -fx-padding: 12 20 12 20; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(245,124,0,0.3), 4, 0, 0, 2);">
                                             <font>
                                                <Font size="12.0" />
                                             </font>
                                          </Button>
                                          <Button fx:id="btnViewMetals" text="MANAGE" style="-fx-background-color: transparent; -fx-text-fill: #F57C00; -fx-font-family: 'Segoe UI'; -fx-font-weight: 600; -fx-background-radius: 8; -fx-padding: 12 20 12 20; -fx-cursor: hand; -fx-border-color: #F57C00; -fx-border-radius: 8; -fx-border-width: 1.5;">
                                             <font>
                                                <Font size="12.0" />
                                             </font>
                                          </Button>
                                       </children>
                                    </HBox>
                                 </children>
                              </HBox>
                           </children>
                        </VBox>
                     </children>
                  </VBox>
                  
                  <!-- Customer & Supplier Section -->
                  <VBox spacing="16.0">
                     <children>
                        <Label text="Customer &amp; Supplier Management" style="-fx-font-family: 'Segoe UI'; -fx-font-weight: 600; -fx-font-size: 18px;" textFill="#424242" />
                        
                        <!-- Customers Card -->
                        <VBox style="-fx-background-color: #FFFFFF; -fx-background-radius: 12; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.08), 8, 0, 0, 3); -fx-padding: 24;" spacing="12.0">
                           <children>
                              <HBox alignment="CENTER_LEFT" spacing="16.0">
                                 <children>
                                    <VBox style="-fx-background-color: #E8F5E9; -fx-background-radius: 12; -fx-padding: 16; -fx-pref-width: 60; -fx-pref-height: 60; -fx-alignment: CENTER;">
                                       <children>
                                          <FontAwesomeIcon fill="#388E3C" glyphName="USERS" size="2.0em" />
                                       </children>
                                    </VBox>
                                    <VBox spacing="4.0" HBox.hgrow="ALWAYS">
                                       <children>
                                          <Label text="Customers" style="-fx-font-family: 'Segoe UI'; -fx-font-weight: 600; -fx-font-size: 16px;" textFill="#212121" />
                                          <Label text="Manage customer information, contact details and purchase history" style="-fx-font-family: 'Segoe UI'; -fx-font-size: 13px;" textFill="#616161" wrapText="true" />
                                       </children>
                                    </VBox>
                                    <HBox spacing="12.0">
                                       <children>
                                          <Button fx:id="btnAddCustomer" text="ADD CUSTOMER" style="-fx-background-color: #388E3C; -fx-text-fill: white; -fx-font-family: 'Segoe UI'; -fx-font-weight: 600; -fx-background-radius: 8; -fx-padding: 12 20 12 20; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(56,142,60,0.3), 4, 0, 0, 2);">
                                             <font>
                                                <Font size="12.0" />
                                             </font>
                                          </Button>
                                          <Button fx:id="btnViewCustomers" text="VIEW ALL" style="-fx-background-color: transparent; -fx-text-fill: #388E3C; -fx-font-family: 'Segoe UI'; -fx-font-weight: 600; -fx-background-radius: 8; -fx-padding: 12 20 12 20; -fx-cursor: hand; -fx-border-color: #388E3C; -fx-border-radius: 8; -fx-border-width: 1.5;">
                                             <font>
                                                <Font size="12.0" />
                                             </font>
                                          </Button>
                                       </children>
                                    </HBox>
                                 </children>
                              </HBox>
                           </children>
                        </VBox>
                        
                        <!-- Suppliers Card -->
                        <VBox style="-fx-background-color: #FFFFFF; -fx-background-radius: 12; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.08), 8, 0, 0, 3); -fx-padding: 24;" spacing="12.0">
                           <children>
                              <HBox alignment="CENTER_LEFT" spacing="16.0">
                                 <children>
                                    <VBox style="-fx-background-color: #FFEBEE; -fx-background-radius: 12; -fx-padding: 16; -fx-pref-width: 60; -fx-pref-height: 60; -fx-alignment: CENTER;">
                                       <children>
                                          <FontAwesomeIcon fill="#C62828" glyphName="TRUCK" size="2.0em" />
                                       </children>
                                    </VBox>
                                    <VBox spacing="4.0" HBox.hgrow="ALWAYS">
                                       <children>
                                          <Label text="Suppliers" style="-fx-font-family: 'Segoe UI'; -fx-font-weight: 600; -fx-font-size: 16px;" textFill="#212121" />
                                          <Label text="Manage supplier information, contact details and purchase orders" style="-fx-font-family: 'Segoe UI'; -fx-font-size: 13px;" textFill="#616161" wrapText="true" />
                                       </children>
                                    </VBox>
                                    <HBox spacing="12.0">
                                       <children>
                                          <Button fx:id="btnAddSupplier" text="ADD SUPPLIER" style="-fx-background-color: #C62828; -fx-text-fill: white; -fx-font-family: 'Segoe UI'; -fx-font-weight: 600; -fx-background-radius: 8; -fx-padding: 12 20 12 20; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(198,40,40,0.3), 4, 0, 0, 2);">
                                             <font>
                                                <Font size="12.0" />
                                             </font>
                                          </Button>
                                          <Button fx:id="btnViewSuppliers" text="VIEW ALL" style="-fx-background-color: transparent; -fx-text-fill: #C62828; -fx-font-family: 'Segoe UI'; -fx-font-weight: 600; -fx-background-radius: 8; -fx-padding: 12 20 12 20; -fx-cursor: hand; -fx-border-color: #C62828; -fx-border-radius: 8; -fx-border-width: 1.5;">
                                             <font>
                                                <Font size="12.0" />
                                             </font>
                                          </Button>
                                       </children>
                                    </HBox>
                                 </children>
                              </HBox>
                           </children>
                        </VBox>
                     </children>
                  </VBox>
               </children>
            </VBox>
         </content>
      </ScrollPane>
   </center>
</BorderPane>