<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIcon?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="800.0" prefWidth="1200.0" style="-fx-background-color: #F5F5F5;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gurukrupa.controller.master.JewelryItemFormController">
   <children>
      
      <!-- Main Container -->
      <HBox spacing="20.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
         <children>
            
            <!-- Left Panel - Form -->
            <VBox spacing="20.0" style="-fx-background-color: #FFFFFF; -fx-background-radius: 16; -fx-padding: 30; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.12), 20, 0, 0, 4);" HBox.hgrow="ALWAYS">
               <children>
                  
                  <!-- Form Header -->
                  <HBox alignment="CENTER_LEFT" spacing="15.0">
                     <children>
                        <StackPane prefHeight="60.0" prefWidth="60.0" style="-fx-background-color: linear-gradient(135deg, #1976D2 0%, #1565C0 100%); -fx-background-radius: 30;">
                           <children>
                              <FontAwesomeIcon fill="WHITE" glyphName="DIAMOND" size="1.8em" />
                           </children>
                        </StackPane>
                        <VBox>
                           <children>
                              <Text fx:id="txtFormTitle" fill="#1A237E" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-weight: bold; -fx-font-size: 26px; -fx-font-family: 'Segoe UI';" text="Add New Jewelry Item" />
                              <Text fill="#757575" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-size: 14px;" text="Fill in the details below to create a new jewelry item" />
                           </children>
                        </VBox>
                     </children>
                  </HBox>
                  
                  <!-- Form Content in ScrollPane -->
                  <ScrollPane fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: transparent;" vbarPolicy="AS_NEEDED" VBox.vgrow="ALWAYS">
                     <content>
                        <VBox spacing="20.0">
                           <children>
                              
                              <!-- Basic Information Section -->
                              <VBox spacing="15.0">
                                 <children>
                                    <Text fill="#1976D2" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-weight: bold; -fx-font-size: 16px; -fx-font-family: 'Segoe UI';" text="BASIC INFORMATION" />
                                    
                                    <!-- Row 1: Item Code and Item Name -->
                                    <HBox spacing="15.0">
                                       <children>
                                          <VBox spacing="8.0" HBox.hgrow="ALWAYS">
                                             <children>
                                                <Label style="-fx-text-fill: #424242; -fx-font-weight: 600; -fx-font-size: 13px; -fx-font-family: 'Segoe UI';" text="Item Code *" />
                                                <TextField fx:id="txtItemCode" promptText="Auto-generated or enter manually" style="-fx-background-color: #FAFAFA; -fx-background-radius: 8; -fx-padding: 12; -fx-font-size: 14px; -fx-border-color: #E0E0E0; -fx-border-radius: 8; -fx-border-width: 1; -fx-font-family: 'Segoe UI';" />
                                             </children>
                                          </VBox>
                                          <VBox spacing="8.0" HBox.hgrow="ALWAYS">
                                             <children>
                                                <Label style="-fx-text-fill: #424242; -fx-font-weight: 600; -fx-font-size: 13px; -fx-font-family: 'Segoe UI';" text="Item Name *" />
                                                <TextField fx:id="txtItemName" promptText="Enter jewelry item name" style="-fx-background-color: #FAFAFA; -fx-background-radius: 8; -fx-padding: 12; -fx-font-size: 14px; -fx-border-color: #E0E0E0; -fx-border-radius: 8; -fx-border-width: 1; -fx-font-family: 'Segoe UI';" />
                                             </children>
                                          </VBox>
                                       </children>
                                    </HBox>
                                    
                                    <!-- Row 2: Category and Metal Type -->
                                    <HBox spacing="15.0">
                                       <children>
                                          <VBox spacing="8.0" HBox.hgrow="ALWAYS">
                                             <children>
                                                <Label style="-fx-text-fill: #424242; -fx-font-weight: 600; -fx-font-size: 13px; -fx-font-family: 'Segoe UI';" text="Category *" />
                                                <ComboBox fx:id="cmbCategory" editable="true" promptText="Select or enter category" style="-fx-background-color: #FAFAFA; -fx-background-radius: 8; -fx-padding: 8; -fx-border-color: #E0E0E0; -fx-border-radius: 8; -fx-border-width: 1; -fx-font-family: 'Segoe UI'; -fx-font-size: 14px;" HBox.hgrow="ALWAYS" />
                                             </children>
                                          </VBox>
                                          <VBox spacing="8.0" HBox.hgrow="ALWAYS">
                                             <children>
                                                <Label style="-fx-text-fill: #424242; -fx-font-weight: 600; -fx-font-size: 13px; -fx-font-family: 'Segoe UI';" text="Metal Type *" />
                                                <ComboBox fx:id="cmbMetalType" promptText="Select metal type" style="-fx-background-color: #FAFAFA; -fx-background-radius: 8; -fx-padding: 8; -fx-border-color: #E0E0E0; -fx-border-radius: 8; -fx-border-width: 1; -fx-font-family: 'Segoe UI'; -fx-font-size: 14px;" HBox.hgrow="ALWAYS" />
                                             </children>
                                          </VBox>
                                       </children>
                                    </HBox>
                                    
                                    <!-- Row 3: Purity and Quantity -->
                                    <HBox spacing="15.0">
                                       <children>
                                          <VBox spacing="8.0" HBox.hgrow="ALWAYS">
                                             <children>
                                                <Label style="-fx-text-fill: #424242; -fx-font-weight: 600; -fx-font-size: 13px; -fx-font-family: 'Segoe UI';" text="Purity (Karat) *" />
                                                <TextField fx:id="txtPurity" promptText="e.g., 22.00, 18.00, 14.00" style="-fx-background-color: #FAFAFA; -fx-background-radius: 8; -fx-padding: 12; -fx-font-size: 14px; -fx-border-color: #E0E0E0; -fx-border-radius: 8; -fx-border-width: 1; -fx-font-family: 'Segoe UI';" />
                                             </children>
                                          </VBox>
                                          <VBox spacing="8.0" HBox.hgrow="ALWAYS">
                                             <children>
                                                <Label style="-fx-text-fill: #424242; -fx-font-weight: 600; -fx-font-size: 13px; -fx-font-family: 'Segoe UI';" text="Quantity *" />
                                                <TextField fx:id="txtQuantity" promptText="Available quantity" style="-fx-background-color: #FAFAFA; -fx-background-radius: 8; -fx-padding: 12; -fx-font-size: 14px; -fx-border-color: #E0E0E0; -fx-border-radius: 8; -fx-border-width: 1; -fx-font-family: 'Segoe UI';" />
                                             </children>
                                          </VBox>
                                       </children>
                                    </HBox>
                                 </children>
                              </VBox>
                              
                              <!-- Weight Information Section -->
                              <VBox spacing="15.0">
                                 <children>
                                    <Text fill="#2E7D32" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-weight: bold; -fx-font-size: 16px; -fx-font-family: 'Segoe UI';" text="WEIGHT INFORMATION" />
                                    
                                    <!-- Row 1: Gross Weight and Stone Weight -->
                                    <HBox spacing="15.0">
                                       <children>
                                          <VBox spacing="8.0" HBox.hgrow="ALWAYS">
                                             <children>
                                                <Label style="-fx-text-fill: #424242; -fx-font-weight: 600; -fx-font-size: 13px; -fx-font-family: 'Segoe UI';" text="Gross Weight (grams) *" />
                                                <TextField fx:id="txtGrossWeight" promptText="Total weight including stones" style="-fx-background-color: #FAFAFA; -fx-background-radius: 8; -fx-padding: 12; -fx-font-size: 14px; -fx-border-color: #E0E0E0; -fx-border-radius: 8; -fx-border-width: 1; -fx-font-family: 'Segoe UI';" />
                                             </children>
                                          </VBox>
                                          <VBox spacing="8.0" HBox.hgrow="ALWAYS">
                                             <children>
                                                <Label style="-fx-text-fill: #424242; -fx-font-weight: 600; -fx-font-size: 13px; -fx-font-family: 'Segoe UI';" text="Stone Weight (grams)" />
                                                <TextField fx:id="txtStoneWeight" promptText="Weight of stones/gems" style="-fx-background-color: #FAFAFA; -fx-background-radius: 8; -fx-padding: 12; -fx-font-size: 14px; -fx-border-color: #E0E0E0; -fx-border-radius: 8; -fx-border-width: 1; -fx-font-family: 'Segoe UI';" />
                                             </children>
                                          </VBox>
                                       </children>
                                    </HBox>
                                    
                                    <!-- Row 2: Net Weight (Auto-calculated) -->
                                    <VBox spacing="8.0">
                                       <children>
                                          <Label style="-fx-text-fill: #424242; -fx-font-weight: 600; -fx-font-size: 13px; -fx-font-family: 'Segoe UI';" text="Net Weight (grams) - Auto Calculated" />
                                          <TextField fx:id="txtNetWeight" editable="false" promptText="Will be calculated automatically" style="-fx-background-color: #E8F5E9; -fx-background-radius: 8; -fx-padding: 12; -fx-font-size: 14px; -fx-border-color: #81C784; -fx-border-radius: 8; -fx-border-width: 1; -fx-font-weight: 600; -fx-font-family: 'Segoe UI';" />
                                       </children>
                                    </VBox>
                                 </children>
                              </VBox>
                              
                              <!-- Pricing Information Section -->
                              <VBox spacing="15.0">
                                 <children>
                                    <Text fill="#F57C00" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-weight: bold; -fx-font-size: 16px; -fx-font-family: 'Segoe UI';" text="PRICING INFORMATION" />
                                    
                                    <!-- Row 1: Gold Rate and Labour Charges -->
                                    <HBox spacing="15.0">
                                       <children>
                                          <VBox spacing="8.0" HBox.hgrow="ALWAYS">
                                             <children>
                                                <Label style="-fx-text-fill: #424242; -fx-font-weight: 600; -fx-font-size: 13px; -fx-font-family: 'Segoe UI';" text="Gold Rate (per 10 grams) *" />
                                                <TextField fx:id="txtGoldRate" promptText="Current gold rate" style="-fx-background-color: #FAFAFA; -fx-background-radius: 8; -fx-padding: 12; -fx-font-size: 14px; -fx-border-color: #E0E0E0; -fx-border-radius: 8; -fx-border-width: 1; -fx-font-family: 'Segoe UI';" />
                                             </children>
                                          </VBox>
                                          <VBox spacing="8.0" HBox.hgrow="ALWAYS">
                                             <children>
                                                <Label style="-fx-text-fill: #424242; -fx-font-weight: 600; -fx-font-size: 13px; -fx-font-family: 'Segoe UI';" text="Labour Charges *" />
                                                <TextField fx:id="txtLabourCharges" promptText="Making charges" style="-fx-background-color: #FAFAFA; -fx-background-radius: 8; -fx-padding: 12; -fx-font-size: 14px; -fx-border-color: #E0E0E0; -fx-border-radius: 8; -fx-border-width: 1; -fx-font-family: 'Segoe UI';" />
                                             </children>
                                          </VBox>
                                       </children>
                                    </HBox>
                                    
                                    <!-- Row 2: Stone Charges and Other Charges -->
                                    <HBox spacing="15.0">
                                       <children>
                                          <VBox spacing="8.0" HBox.hgrow="ALWAYS">
                                             <children>
                                                <Label style="-fx-text-fill: #424242; -fx-font-weight: 600; -fx-font-size: 13px; -fx-font-family: 'Segoe UI';" text="Stone Charges" />
                                                <TextField fx:id="txtStoneCharges" promptText="Charges for stones/gems" style="-fx-background-color: #FAFAFA; -fx-background-radius: 8; -fx-padding: 12; -fx-font-size: 14px; -fx-border-color: #E0E0E0; -fx-border-radius: 8; -fx-border-width: 1; -fx-font-family: 'Segoe UI';" />
                                             </children>
                                          </VBox>
                                          <VBox spacing="8.0" HBox.hgrow="ALWAYS">
                                             <children>
                                                <Label style="-fx-text-fill: #424242; -fx-font-weight: 600; -fx-font-size: 13px; -fx-font-family: 'Segoe UI';" text="Other Charges" />
                                                <TextField fx:id="txtOtherCharges" promptText="Any additional charges" style="-fx-background-color: #FAFAFA; -fx-background-radius: 8; -fx-padding: 12; -fx-font-size: 14px; -fx-border-color: #E0E0E0; -fx-border-radius: 8; -fx-border-width: 1; -fx-font-family: 'Segoe UI';" />
                                             </children>
                                          </VBox>
                                       </children>
                                    </HBox>
                                    
                                    <!-- Row 3: Total Amount (Auto-calculated) -->
                                    <VBox spacing="8.0">
                                       <children>
                                          <Label style="-fx-text-fill: #424242; -fx-font-weight: 600; -fx-font-size: 13px; -fx-font-family: 'Segoe UI';" text="Total Amount - Auto Calculated" />
                                          <TextField fx:id="txtTotalAmount" editable="false" promptText="Will be calculated automatically" style="-fx-background-color: #E3F2FD; -fx-background-radius: 8; -fx-padding: 12; -fx-font-size: 16px; -fx-border-color: #1976D2; -fx-border-radius: 8; -fx-border-width: 1; -fx-font-weight: bold; -fx-font-family: 'Segoe UI';" />
                                       </children>
                                    </VBox>
                                 </children>
                              </VBox>
                              
                              <!-- Additional Information Section -->
                              <VBox spacing="15.0">
                                 <children>
                                    <Text fill="#7B1FA2" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-weight: bold; -fx-font-size: 16px; -fx-font-family: 'Segoe UI';" text="ADDITIONAL INFORMATION" />
                                    
                                    <!-- Description -->
                                    <VBox spacing="8.0">
                                       <children>
                                          <Label style="-fx-text-fill: #424242; -fx-font-weight: 600; -fx-font-size: 13px; -fx-font-family: 'Segoe UI';" text="Description" />
                                          <TextArea fx:id="txtDescription" prefRowCount="3" promptText="Enter detailed description of the jewelry item..." style="-fx-background-color: #FAFAFA; -fx-background-radius: 8; -fx-padding: 12; -fx-font-size: 14px; -fx-border-color: #E0E0E0; -fx-border-radius: 8; -fx-border-width: 1; -fx-font-family: 'Segoe UI';" wrapText="true" />
                                       </children>
                                    </VBox>
                                 </children>
                              </VBox>
                              
                              <!-- Action Buttons -->
                              <HBox alignment="CENTER" spacing="15.0">
                                 <children>
                                    <Button fx:id="btnSave" mnemonicParsing="false" prefHeight="48.0" prefWidth="140.0" style="-fx-background-color: #2E7D32; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-font-size: 14px; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(46,125,50,0.3), 4, 0, 0, 2); -fx-font-family: 'Segoe UI';" text="SAVE">
                                       <graphic>
                                          <FontAwesomeIcon fill="WHITE" glyphName="SAVE" size="1.2em" />
                                       </graphic>
                                       <font>
                                          <Font name="System Bold" size="14.0" />
                                       </font>
                                    </Button>
                                    <Button fx:id="btnUpdate" mnemonicParsing="false" prefHeight="48.0" prefWidth="140.0" style="-fx-background-color: #1976D2; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-font-size: 14px; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(25,118,210,0.3), 4, 0, 0, 2); -fx-font-family: 'Segoe UI';" text="UPDATE" visible="false">
                                       <graphic>
                                          <FontAwesomeIcon fill="WHITE" glyphName="EDIT" size="1.2em" />
                                       </graphic>
                                       <font>
                                          <Font name="System Bold" size="14.0" />
                                       </font>
                                    </Button>
                                    <Button fx:id="btnClear" mnemonicParsing="false" prefHeight="48.0" prefWidth="140.0" style="-fx-background-color: #616161; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-font-size: 14px; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(97,97,97,0.3), 4, 0, 0, 2); -fx-font-family: 'Segoe UI';" text="CLEAR">
                                       <graphic>
                                          <FontAwesomeIcon fill="WHITE" glyphName="ERASER" size="1.2em" />
                                       </graphic>
                                       <font>
                                          <Font name="System Bold" size="14.0" />
                                       </font>
                                    </Button>
                                 </children>
                                 <VBox.margin>
                                    <Insets top="20.0" />
                                 </VBox.margin>
                              </HBox>
                           </children>
                           <padding>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </padding>
                        </VBox>
                     </content>
                  </ScrollPane>
               </children>
            </VBox>
            
            <!-- Right Panel - Item List -->
            <VBox spacing="15.0" style="-fx-background-color: #FFFFFF; -fx-background-radius: 16; -fx-padding: 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.12), 20, 0, 0, 4);" HBox.hgrow="ALWAYS">
               <children>
                  
                  <!-- List Header -->
                  <HBox alignment="CENTER_LEFT" spacing="15.0">
                     <children>
                        <StackPane prefHeight="50.0" prefWidth="50.0" style="-fx-background-color: linear-gradient(135deg, #2E7D32 0%, #1B5E20 100%); -fx-background-radius: 25;">
                           <children>
                              <FontAwesomeIcon fill="WHITE" glyphName="LIST" size="1.5em" />
                           </children>
                        </StackPane>
                        <VBox HBox.hgrow="ALWAYS">
                           <children>
                              <Text fill="#1A237E" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-weight: bold; -fx-font-size: 22px; -fx-font-family: 'Segoe UI';" text="Jewelry Items" />
                              <Text fill="#757575" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-size: 12px;" text="Click on an item to edit" />
                           </children>
                        </VBox>
                        <Button fx:id="btnRefresh" mnemonicParsing="false" style="-fx-background-color: #E0E0E0; -fx-background-radius: 20; -fx-padding: 10; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 2, 0, 0, 1);" text="">
                           <graphic>
                              <FontAwesomeIcon fill="#616161" glyphName="REFRESH" size="1.2em" />
                           </graphic>
                        </Button>
                     </children>
                  </HBox>
                  
                  <!-- Search Box -->
                  <HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-background-color: #F5F5F5; -fx-background-radius: 25; -fx-padding: 12; -fx-border-color: #E0E0E0; -fx-border-radius: 25; -fx-border-width: 1;">
                     <children>
                        <FontAwesomeIcon fill="#757575" glyphName="SEARCH" size="1.2em" />
                        <TextField fx:id="txtSearch" promptText="Search by item name, code, or category..." style="-fx-background-color: transparent; -fx-border-color: transparent; -fx-font-family: 'Segoe UI'; -fx-font-size: 14px;" HBox.hgrow="ALWAYS" />
                     </children>
                  </HBox>
                  
                  <!-- Filter Section -->
                  <HBox spacing="10.0">
                     <children>
                        <ComboBox fx:id="cmbFilterCategory" promptText="Category" style="-fx-background-color: #FAFAFA; -fx-background-radius: 8; -fx-padding: 8; -fx-border-color: #E0E0E0; -fx-border-radius: 8; -fx-border-width: 1; -fx-font-family: 'Segoe UI'; -fx-font-size: 13px;" HBox.hgrow="ALWAYS" />
                        <ComboBox fx:id="cmbFilterMetalType" promptText="Metal Type" style="-fx-background-color: #FAFAFA; -fx-background-radius: 8; -fx-padding: 8; -fx-border-color: #E0E0E0; -fx-border-radius: 8; -fx-border-width: 1; -fx-font-family: 'Segoe UI'; -fx-font-size: 13px;" HBox.hgrow="ALWAYS" />
                        <Button fx:id="btnClearFilters" mnemonicParsing="false" style="-fx-background-color: #FFEBEE; -fx-background-radius: 8; -fx-padding: 8 16 8 16; -fx-border-color: #EF5350; -fx-border-radius: 8; -fx-border-width: 1; -fx-cursor: hand; -fx-font-family: 'Segoe UI'; -fx-font-size: 13px;" text="Clear">
                           <graphic>
                              <FontAwesomeIcon fill="#D32F2F" glyphName="TIMES" size="1em" />
                           </graphic>
                        </Button>
                     </children>
                  </HBox>
                  
                  <!-- Items Table -->
                  <TableView fx:id="tableJewelryItems" style="-fx-background-color: transparent; -fx-background-insets: 0; -fx-border-color: #E0E0E0; -fx-border-radius: 8; -fx-border-width: 1;" VBox.vgrow="ALWAYS">
                     <columns>
                        <TableColumn fx:id="colItemCode" prefWidth="80.0" style="-fx-alignment: CENTER;" text="Code" />
                        <TableColumn fx:id="colItemName" prefWidth="120.0" text="Name" />
                        <TableColumn fx:id="colCategory" prefWidth="80.0" style="-fx-alignment: CENTER;" text="Category" />
                        <TableColumn fx:id="colMetalType" prefWidth="70.0" style="-fx-alignment: CENTER;" text="Metal" />
                        <TableColumn fx:id="colPurity" prefWidth="60.0" style="-fx-alignment: CENTER;" text="Purity" />
                        <TableColumn fx:id="colNetWeight" prefWidth="80.0" style="-fx-alignment: CENTER;" text="Net Wt." />
                        <TableColumn fx:id="colTotalAmount" prefWidth="100.0" style="-fx-alignment: CENTER;" text="Amount" />
                        <TableColumn fx:id="colQuantity" prefWidth="60.0" style="-fx-alignment: CENTER;" text="Qty" />
                     </columns>
                  </TableView>
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
</AnchorPane>