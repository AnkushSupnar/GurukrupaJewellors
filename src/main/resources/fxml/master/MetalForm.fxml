<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIcon?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="800.0" prefWidth="1200.0" style="-fx-background-color: #F5F5F5;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gurukrupa.controller.master.MetalFormController">
   <children>
      
      <!-- Main Container -->
      <HBox spacing="20.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
         <children>
            
            <!-- Left Panel - Form -->
            <VBox spacing="20.0" style="-fx-background-color: #FFFFFF; -fx-background-radius: 16; -fx-padding: 30; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.12), 20, 0, 0, 4);" HBox.hgrow="NEVER" prefWidth="450.0">
               <children>
                  
                  <!-- Form Header with Back Button -->
                  <HBox alignment="CENTER_LEFT" spacing="15.0">
                     <children>
                        <!-- Back Button -->
                        <Button fx:id="btnBack" mnemonicParsing="false" style="-fx-background-color: #E0E0E0; -fx-background-radius: 20; -fx-padding: 10; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 2, 0, 0, 1);">
                           <graphic>
                              <FontAwesomeIcon fill="#424242" glyphName="ARROW_LEFT" size="1.5em" />
                           </graphic>
                        </Button>
                        
                        <StackPane prefHeight="60.0" prefWidth="60.0" style="-fx-background-color: linear-gradient(135deg, #F57C00 0%, #E65100 100%); -fx-background-radius: 30;">
                           <children>
                              <FontAwesomeIcon fill="WHITE" glyphName="DIAMOND" size="1.8em" />
                           </children>
                        </StackPane>
                        <VBox>
                           <children>
                              <Text fx:id="txtFormTitle" fill="#1A237E" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-weight: bold; -fx-font-size: 26px; -fx-font-family: 'Segoe UI';" text="Add New Metal" />
                              <Text fill="#757575" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-size: 14px;" text="Configure metal types and properties" />
                           </children>
                        </VBox>
                     </children>
                  </HBox>
                  
                  <!-- Form Fields -->
                  <VBox spacing="16.0" VBox.vgrow="ALWAYS">
                     <children>
                        
                        <!-- Metal Name -->
                        <VBox spacing="8.0">
                           <children>
                              <Label style="-fx-text-fill: #212121; -fx-font-weight: 600; -fx-font-size: 13px; -fx-font-family: 'Segoe UI';" text="Metal Name *" />
                              <TextField fx:id="txtMetalName" promptText="e.g., Gold 24K, Silver 92.5" style="-fx-background-color: #FAFAFA; -fx-background-radius: 8; -fx-padding: 12; -fx-font-size: 14px; -fx-border-color: #E0E0E0; -fx-border-radius: 8; -fx-border-width: 1; -fx-font-family: 'Segoe UI';" />
                           </children>
                        </VBox>
                        
                        <!-- Metal Type -->
                        <VBox spacing="8.0">
                           <children>
                              <Label style="-fx-text-fill: #212121; -fx-font-weight: 600; -fx-font-size: 13px; -fx-font-family: 'Segoe UI';" text="Metal Type *" />
                              <ComboBox fx:id="cmbMetalType" promptText="Select metal type" style="-fx-background-color: #FAFAFA; -fx-background-radius: 8; -fx-padding: 8; -fx-border-color: #E0E0E0; -fx-border-radius: 8; -fx-border-width: 1; -fx-font-family: 'Segoe UI'; -fx-font-size: 14px;" HBox.hgrow="ALWAYS" />
                           </children>
                        </VBox>
                        
                        <!-- Purity -->
                        <VBox spacing="8.0">
                           <children>
                              <Label style="-fx-text-fill: #212121; -fx-font-weight: 600; -fx-font-size: 13px; -fx-font-family: 'Segoe UI';" text="Purity *" />
                              <TextField fx:id="txtPurity" promptText="e.g., 24K, 22K, 18K, 92.5" style="-fx-background-color: #FAFAFA; -fx-background-radius: 8; -fx-padding: 12; -fx-font-size: 14px; -fx-border-color: #E0E0E0; -fx-border-radius: 8; -fx-border-width: 1; -fx-font-family: 'Segoe UI';" />
                           </children>
                        </VBox>
                        
                        <!-- Description -->
                        <VBox spacing="8.0">
                           <children>
                              <Label style="-fx-text-fill: #212121; -fx-font-weight: 600; -fx-font-size: 13px; -fx-font-family: 'Segoe UI';" text="Description" />
                              <TextArea fx:id="txtDescription" prefRowCount="4" promptText="Enter any additional details about this metal type..." style="-fx-background-color: #FAFAFA; -fx-background-radius: 8; -fx-padding: 12; -fx-font-size: 14px; -fx-border-color: #E0E0E0; -fx-border-radius: 8; -fx-border-width: 1; -fx-font-family: 'Segoe UI';" wrapText="true" />
                           </children>
                        </VBox>
                        
                        <!-- Action Buttons -->
                        <HBox alignment="CENTER" spacing="15.0">
                           <children>
                              <Button fx:id="btnSave" mnemonicParsing="false" prefHeight="48.0" prefWidth="140.0" style="-fx-background-color: #2E7D32; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-font-size: 14px; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(46,125,50,0.3), 4, 0, 0, 2); -fx-font-family: 'Segoe UI';" text="SAVE">
                                 <graphic>
                                    <FontAwesomeIcon fill="WHITE" glyphName="SAVE" size="1.2em" />
                                 </graphic>
                                 <font>
                                    <Font name="System Bold" size="14.0" />
                                 </font>
                              </Button>
                              <Button fx:id="btnUpdate" mnemonicParsing="false" prefHeight="48.0" prefWidth="140.0" style="-fx-background-color: #1976D2; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-font-size: 14px; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(25,118,210,0.3), 4, 0, 0, 2); -fx-font-family: 'Segoe UI';" text="UPDATE" visible="false">
                                 <graphic>
                                    <FontAwesomeIcon fill="WHITE" glyphName="EDIT" size="1.2em" />
                                 </graphic>
                                 <font>
                                    <Font name="System Bold" size="14.0" />
                                 </font>
                              </Button>
                              <Button fx:id="btnClear" mnemonicParsing="false" prefHeight="48.0" prefWidth="140.0" style="-fx-background-color: #616161; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-font-size: 14px; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(97,97,97,0.3), 4, 0, 0, 2); -fx-font-family: 'Segoe UI';" text="CLEAR">
                                 <graphic>
                                    <FontAwesomeIcon fill="WHITE" glyphName="ERASER" size="1.2em" />
                                 </graphic>
                                 <font>
                                    <Font name="System Bold" size="14.0" />
                                 </font>
                              </Button>
                           </children>
                           <VBox.margin>
                              <Insets top="20.0" />
                           </VBox.margin>
                        </HBox>
                        
                     </children>
                  </VBox>
                  
               </children>
            </VBox>
            
            <!-- Right Panel - Metal List -->
            <VBox spacing="15.0" style="-fx-background-color: #FFFFFF; -fx-background-radius: 16; -fx-padding: 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.12), 20, 0, 0, 4);" HBox.hgrow="ALWAYS">
               <children>
                  
                  <!-- List Header -->
                  <HBox alignment="CENTER_LEFT" spacing="15.0">
                     <children>
                        <StackPane prefHeight="50.0" prefWidth="50.0" style="-fx-background-color: linear-gradient(135deg, #F57C00 0%, #E65100 100%); -fx-background-radius: 25;">
                           <children>
                              <FontAwesomeIcon fill="WHITE" glyphName="LIST" size="1.5em" />
                           </children>
                        </StackPane>
                        <VBox HBox.hgrow="ALWAYS">
                           <children>
                              <Text fill="#1A237E" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-weight: bold; -fx-font-size: 22px; -fx-font-family: 'Segoe UI';" text="Metal List" />
                              <Text fill="#757575" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-size: 12px;" text="Click on a metal to edit" />
                           </children>
                        </VBox>
                        <Button fx:id="btnRefresh" mnemonicParsing="false" style="-fx-background-color: #E0E0E0; -fx-background-radius: 20; -fx-padding: 10; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 2, 0, 0, 1);" text="">
                           <graphic>
                              <FontAwesomeIcon fill="#616161" glyphName="REFRESH" size="1.2em" />
                           </graphic>
                        </Button>
                     </children>
                  </HBox>
                  
                  <!-- Search Box -->
                  <HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-background-color: #F5F5F5; -fx-background-radius: 25; -fx-padding: 12; -fx-border-color: #E0E0E0; -fx-border-radius: 25; -fx-border-width: 1;">
                     <children>
                        <FontAwesomeIcon fill="#757575" glyphName="SEARCH" size="1.2em" />
                        <TextField fx:id="txtSearch" promptText="Search metals by name, type or purity..." style="-fx-background-color: transparent; -fx-border-color: transparent; -fx-font-family: 'Segoe UI'; -fx-font-size: 14px;" HBox.hgrow="ALWAYS" />
                     </children>
                  </HBox>
                  
                  <!-- Filter by Type -->
                  <HBox spacing="10.0">
                     <children>
                        <ComboBox fx:id="cmbFilterType" promptText="All Metal Types" style="-fx-background-color: #FAFAFA; -fx-background-radius: 8; -fx-padding: 8; -fx-border-color: #E0E0E0; -fx-border-radius: 8; -fx-border-width: 1; -fx-font-family: 'Segoe UI'; -fx-font-size: 13px;" HBox.hgrow="ALWAYS" />
                        <Button fx:id="btnClearFilters" mnemonicParsing="false" style="-fx-background-color: #FFF3E0; -fx-background-radius: 8; -fx-padding: 8 16 8 16; -fx-border-color: #F57C00; -fx-border-radius: 8; -fx-border-width: 1; -fx-cursor: hand; -fx-font-family: 'Segoe UI'; -fx-font-size: 13px;" text="Clear">
                           <graphic>
                              <FontAwesomeIcon fill="#E65100" glyphName="TIMES" size="1em" />
                           </graphic>
                        </Button>
                     </children>
                  </HBox>
                  
                  <!-- Metals Table -->
                  <TableView fx:id="tableMetals" style="-fx-background-color: transparent; -fx-background-insets: 0; -fx-border-color: #E0E0E0; -fx-border-radius: 8; -fx-border-width: 1;" VBox.vgrow="ALWAYS">
                     <columns>
                        <TableColumn fx:id="colId" prefWidth="40.0" style="-fx-alignment: CENTER;" text="#" visible="false" />
                        <TableColumn fx:id="colMetalName" prefWidth="180.0" text="Metal Name" />
                        <TableColumn fx:id="colMetalType" prefWidth="120.0" style="-fx-alignment: CENTER;" text="Type" />
                        <TableColumn fx:id="colPurity" prefWidth="100.0" style="-fx-alignment: CENTER;" text="Purity" />
                        <TableColumn fx:id="colDescription" prefWidth="200.0" text="Description" />
                        <TableColumn fx:id="colStatus" prefWidth="100.0" style="-fx-alignment: CENTER;" text="Status" />
                        <TableColumn fx:id="colActions" prefWidth="120.0" style="-fx-alignment: CENTER;" text="Actions" />
                     </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
                  
                  <!-- Summary Info -->
                  <HBox alignment="CENTER" spacing="30.0" style="-fx-background-color: #FFF3E0; -fx-background-radius: 8; -fx-padding: 15;">
                     <children>
                        <HBox spacing="8.0">
                           <children>
                              <FontAwesomeIcon fill="#F57C00" glyphName="INFO_CIRCLE" size="1.2em" />
                              <Text fill="#E65100" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-weight: 600; -fx-font-family: 'Segoe UI';" text="Total Metals:" />
                              <Text fx:id="txtTotalMetals" fill="#E65100" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-weight: bold; -fx-font-family: 'Segoe UI';" text="0" />
                           </children>
                        </HBox>
                        <HBox spacing="8.0">
                           <children>
                              <FontAwesomeIcon fill="#F57C00" glyphName="CHECK_CIRCLE" size="1.2em" />
                              <Text fill="#E65100" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-weight: 600; -fx-font-family: 'Segoe UI';" text="Active:" />
                              <Text fx:id="txtActiveMetals" fill="#E65100" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-weight: bold; -fx-font-family: 'Segoe UI';" text="0" />
                           </children>
                        </HBox>
                     </children>
                  </HBox>
                  
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
</AnchorPane>