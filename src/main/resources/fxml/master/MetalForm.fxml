<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIcon?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="900.0" style="-fx-background-color: #F5F5F5;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gurukrupa.controller.master.MetalFormController">
   <top>
      <!-- Header -->
      <HBox alignment="CENTER_LEFT" style="-fx-background-color: #2E7D32; -fx-padding: 20;" spacing="16.0">
         <children>
            <FontAwesomeIcon fill="#FFFFFF" glyphName="DIAMOND" size="2.0em" />
            <Label text="Metal Management" style="-fx-font-family: 'Segoe UI'; -fx-font-weight: 700;" textFill="#FFFFFF">
               <font>
                  <Font size="22.0" />
               </font>
            </Label>
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="btnClose" minWidth="30.0" minHeight="30.0" maxWidth="30.0" maxHeight="30.0" style="-fx-background-color: transparent; -fx-cursor: hand;">
               <graphic>
                  <FontAwesomeIcon fill="#FFFFFF" glyphName="TIMES" size="1.5em" />
               </graphic>
            </Button>
         </children>
      </HBox>
   </top>
   
   <center>
      <HBox spacing="20.0" style="-fx-padding: 20;">
         <children>
            <!-- Left Panel - Form -->
            <VBox prefWidth="400.0" spacing="16.0" style="-fx-background-color: #FFFFFF; -fx-background-radius: 12; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.08), 8, 0, 0, 3); -fx-padding: 24;">
               <children>
                  <Label text="Add / Edit Metal" style="-fx-font-family: 'Segoe UI'; -fx-font-weight: 600; -fx-font-size: 18px;" textFill="#424242" />
                  
                  <VBox spacing="12.0">
                     <children>
                        <!-- Metal Name -->
                        <VBox spacing="4.0">
                           <children>
                              <Label text="Metal Name *" style="-fx-font-family: 'Segoe UI'; -fx-font-weight: 500;" textFill="#757575">
                                 <font>
                                    <Font size="12.0" />
                                 </font>
                              </Label>
                              <TextField fx:id="txtMetalName" promptText="e.g., Gold 24K" style="-fx-background-color: #F8F9FA; -fx-background-radius: 8; -fx-padding: 12; -fx-font-family: 'Segoe UI'; -fx-font-size: 14px; -fx-border-color: #E0E0E0; -fx-border-radius: 8; -fx-border-width: 1;" />
                           </children>
                        </VBox>
                        
                        <!-- Metal Type -->
                        <VBox spacing="4.0">
                           <children>
                              <Label text="Metal Type *" style="-fx-font-family: 'Segoe UI'; -fx-font-weight: 500;" textFill="#757575">
                                 <font>
                                    <Font size="12.0" />
                                 </font>
                              </Label>
                              <ComboBox fx:id="cmbMetalType" prefWidth="Infinity" promptText="Select metal type" style="-fx-background-color: #F8F9FA; -fx-background-radius: 8; -fx-padding: 8; -fx-font-family: 'Segoe UI'; -fx-font-size: 14px; -fx-border-color: #E0E0E0; -fx-border-radius: 8; -fx-border-width: 1;" />
                           </children>
                        </VBox>
                        
                        <!-- Purity -->
                        <VBox spacing="4.0">
                           <children>
                              <Label text="Purity *" style="-fx-font-family: 'Segoe UI'; -fx-font-weight: 500;" textFill="#757575">
                                 <font>
                                    <Font size="12.0" />
                                 </font>
                              </Label>
                              <TextField fx:id="txtPurity" promptText="e.g., 24K, 22K, 92.5" style="-fx-background-color: #F8F9FA; -fx-background-radius: 8; -fx-padding: 12; -fx-font-family: 'Segoe UI'; -fx-font-size: 14px; -fx-border-color: #E0E0E0; -fx-border-radius: 8; -fx-border-width: 1;" />
                           </children>
                        </VBox>
                        
                        <!-- Description -->
                        <VBox spacing="4.0">
                           <children>
                              <Label text="Description" style="-fx-font-family: 'Segoe UI'; -fx-font-weight: 500;" textFill="#757575">
                                 <font>
                                    <Font size="12.0" />
                                 </font>
                              </Label>
                              <TextArea fx:id="txtDescription" prefRowCount="3" promptText="Enter description (optional)" style="-fx-background-color: #F8F9FA; -fx-background-radius: 8; -fx-padding: 12; -fx-font-family: 'Segoe UI'; -fx-font-size: 14px; -fx-border-color: #E0E0E0; -fx-border-radius: 8; -fx-border-width: 1;" wrapText="true" />
                           </children>
                        </VBox>
                     </children>
                  </VBox>
                  
                  <Region VBox.vgrow="ALWAYS" />
                  
                  <!-- Action Buttons -->
                  <HBox spacing="12.0" alignment="CENTER">
                     <children>
                        <Button fx:id="btnSave" text="SAVE" prefWidth="120.0" style="-fx-background-color: #2E7D32; -fx-text-fill: white; -fx-font-family: 'Segoe UI'; -fx-font-weight: 600; -fx-background-radius: 8; -fx-padding: 12 24 12 24; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(46,125,50,0.3), 4, 0, 0, 2);">
                           <graphic>
                              <FontAwesomeIcon fill="#FFFFFF" glyphName="SAVE" size="1.0em" />
                           </graphic>
                           <font>
                              <Font size="12.0" />
                           </font>
                        </Button>
                        <Button fx:id="btnUpdate" text="UPDATE" prefWidth="120.0" style="-fx-background-color: #F57C00; -fx-text-fill: white; -fx-font-family: 'Segoe UI'; -fx-font-weight: 600; -fx-background-radius: 8; -fx-padding: 12 24 12 24; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(245,124,0,0.3), 4, 0, 0, 2);" visible="false">
                           <graphic>
                              <FontAwesomeIcon fill="#FFFFFF" glyphName="EDIT" size="1.0em" />
                           </graphic>
                           <font>
                              <Font size="12.0" />
                           </font>
                        </Button>
                        <Button fx:id="btnClear" text="CLEAR" prefWidth="120.0" style="-fx-background-color: #616161; -fx-text-fill: white; -fx-font-family: 'Segoe UI'; -fx-font-weight: 600; -fx-background-radius: 8; -fx-padding: 12 24 12 24; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(97,97,97,0.3), 4, 0, 0, 2);">
                           <graphic>
                              <FontAwesomeIcon fill="#FFFFFF" glyphName="ERASER" size="1.0em" />
                           </graphic>
                           <font>
                              <Font size="12.0" />
                           </font>
                        </Button>
                     </children>
                  </HBox>
               </children>
            </VBox>
            
            <!-- Right Panel - Metal List -->
            <VBox HBox.hgrow="ALWAYS" spacing="16.0" style="-fx-background-color: #FFFFFF; -fx-background-radius: 12; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.08), 8, 0, 0, 3); -fx-padding: 24;">
               <children>
                  <!-- Header with Search -->
                  <HBox alignment="CENTER_LEFT" spacing="16.0">
                     <children>
                        <Label text="Metal List" style="-fx-font-family: 'Segoe UI'; -fx-font-weight: 600; -fx-font-size: 18px;" textFill="#424242" />
                        <Region HBox.hgrow="ALWAYS" />
                        <TextField fx:id="txtSearch" promptText="Search metals..." prefWidth="250.0" style="-fx-background-color: #F8F9FA; -fx-background-radius: 8; -fx-padding: 8; -fx-font-family: 'Segoe UI'; -fx-font-size: 13px; -fx-border-color: #E0E0E0; -fx-border-radius: 8; -fx-border-width: 1;" />
                        <Button fx:id="btnRefresh" style="-fx-background-color: #1976D2; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 8; -fx-cursor: hand;">
                           <graphic>
                              <FontAwesomeIcon fill="#FFFFFF" glyphName="REFRESH" size="1.0em" />
                           </graphic>
                        </Button>
                     </children>
                  </HBox>
                  
                  <!-- Table -->
                  <TableView fx:id="tableMetals" VBox.vgrow="ALWAYS" style="-fx-background-color: transparent;">
                     <columns>
                        <TableColumn fx:id="colMetalName" text="Metal Name" prefWidth="150.0" />
                        <TableColumn fx:id="colMetalType" text="Type" prefWidth="100.0" />
                        <TableColumn fx:id="colPurity" text="Purity" prefWidth="80.0" />
                        <TableColumn fx:id="colStatus" text="Status" prefWidth="80.0" />
                        <TableColumn fx:id="colActions" text="Actions" prefWidth="100.0" />
                     </columns>
                  </TableView>
               </children>
            </VBox>
         </children>
      </HBox>
   </center>
</BorderPane>