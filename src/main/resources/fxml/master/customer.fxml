<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIcon?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="600" prefWidth="800" style="-fx-background-color: #f5f5f5;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gurukrupa.controller.master.CustomerController">

    <!-- Header -->
    <StackPane style="-fx-background-color: #673ab7; -fx-background-radius: 5 5 0 0;" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
        <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-weight: bold; -fx-font-size: 18;" text="ADD NEW CUSTOMER" />
        <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
        </padding>
    </StackPane>

    <!-- Form Container -->
    <VBox prefHeight="220.0" prefWidth="760.0" spacing="15" style="-fx-background-color: white; -fx-background-radius: 0 0 5 5; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="80.0">

                 <!-- Name Section -->
        <HBox alignment="CENTER_LEFT" spacing="15">
            <VBox spacing="5">
                <Label style="-fx-text-fill: #673ab7; -fx-font-weight: bold;" text="First Name *" />
                <TextField fx:id="txtFname" prefWidth="500.0" promptText="Enter first name" style="-fx-background-radius: 5; -fx-padding: 8;" />
            </VBox>
            <VBox spacing="5">
                <Label style="-fx-text-fill: #673ab7; -fx-font-weight: bold;" text="Middle Name" />
                <TextField fx:id="txtMName" prefWidth="500.0" promptText="Enter middle name" style="-fx-background-radius: 5; -fx-padding: 8;" />
            </VBox>
            <VBox spacing="5">
                <Label style="-fx-text-fill: #673ab7; -fx-font-weight: bold;" text="Last Name *" />
                <TextField fx:id="txtLName" prefWidth="500.0" promptText="Enter last name" style="-fx-background-radius: 5; -fx-padding: 8;" />
            </VBox>
        </HBox>

                 <!-- Address Section -->
        <VBox spacing="15">
            <HBox alignment="CENTER_LEFT" spacing="15">
                <VBox spacing="5">
                    <Label style="-fx-text-fill: #673ab7; -fx-font-weight: bold;" text="Village/City *" />
                    <TextField fx:id="txtCity" prefWidth="500.0" promptText="Enter village/city" style="-fx-background-radius: 5; -fx-padding: 8;" />
                </VBox>
                <VBox spacing="5">
                    <Label style="-fx-text-fill: #673ab7; -fx-font-weight: bold;" text="Taluka *" />
                    <TextField fx:id="txtTaluka" prefWidth="500.0" promptText="Enter taluka name" style="-fx-background-radius: 5; -fx-padding: 8;" />
                </VBox>
                <VBox spacing="5">
                    <Label style="-fx-text-fill: #673ab7; -fx-font-weight: bold;" text="District *" />
                    <TextField fx:id="txtDistrict" prefWidth="500.0" promptText="Enter district" style="-fx-background-radius: 5; -fx-padding: 8;" />
                </VBox>
            </HBox>

                     <HBox alignment="CENTER_LEFT" spacing="15">
                <VBox spacing="5">
                    <Label style="-fx-text-fill: #673ab7; -fx-font-weight: bold;" text="PIN Code *" />
                    <TextField fx:id="txtPinCode" prefWidth="500.0" promptText="Enter 6-digit PIN" style="-fx-background-radius: 5; -fx-padding: 8;" />
                </VBox>
               <VBox spacing="5">
                   <Label style="-fx-text-fill: #673ab7; -fx-font-weight: bold;" text="Mobile Number *" />
                   <TextField fx:id="txtMobile" prefWidth="500.0" promptText="Enter 10-digit mobile" style="-fx-background-radius: 5; -fx-padding: 8;" />
               </VBox>
               <VBox spacing="5">
                   <Label style="-fx-text-fill: #673ab7; -fx-font-weight: bold;" text="Alternative Mobile" />
                   <TextField fx:id="txtAlterMobile" prefWidth="500.0" promptText="Optional alternate number" style="-fx-background-radius: 5; -fx-padding: 8;" />
               </VBox>
            </HBox>
        </VBox>

                 <!-- Contact Section -->
        <HBox alignment="CENTER_LEFT" spacing="15" />

    </VBox>

              <!-- Action Buttons -->
     <HBox alignment="CENTER_LEFT" layoutX="20.0" layoutY="307.0" prefHeight="49.0" prefWidth="427.0" spacing="15" style="-fx-padding: 10 0 0 0;" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="307.0">
         <Button fx:id="btnSave" mnemonicParsing="false" style="-fx-background-color: #673ab7; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 10 25 10 25;" text="SAVE CUSTOMER">
         <graphic>
            <FontAwesomeIcon fill="WHITE" glyphName="SAVE" />
         </graphic>
      </Button>
         <Button fx:id="btnLoad" mnemonicParsing="false" style="-fx-background-color: #9e9e9e; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 10 25 10 25;" text="LOAD">
         <graphic>
            <FontAwesomeIcon fill="WHITE" glyphName="DOWNLOAD" />
         </graphic>
      </Button>
      <Button fx:id="btnCancel" mnemonicParsing="false" style="-fx-background-color: #9e9e9e; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 10 25 10 25;" text="CANCEL">
         <graphic>
            <FontAwesomeIcon fill="WHITE" glyphName="ERASER" />
         </graphic>
      </Button>
     </HBox>
   <TableView fx:id="table" layoutX="20.0" layoutY="366.0" prefHeight="236.0" prefWidth="760.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="364.0">
     <columns>
       <TableColumn fx:id="colSrNo" prefWidth="75.0" text="NO" />
       <TableColumn fx:id="colName" prefWidth="235.20001220703125" text="Name" />
         <TableColumn fx:id="colAddress" prefWidth="188.0" text="Address" />
         <TableColumn fx:id="colMobile" prefWidth="148.7999267578125" text="Mobile Number" />
         <TableColumn fx:id="colAlterMobile" prefWidth="112.0" text="AlternativeMobile Number" />
     </columns>
      <columnResizePolicy>
         <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
      </columnResizePolicy>
   </TableView>
</AnchorPane>
