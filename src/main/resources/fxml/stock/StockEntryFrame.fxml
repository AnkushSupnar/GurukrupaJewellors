<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIcon?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="750.0" prefWidth="1450.0"
            style="-fx-background-color: #ECEFF1;"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.gurukrupa.controller.stock.StockEntryController">

   <!-- LEFT PANEL - Previous Entries -->
   <left>
      <VBox prefWidth="320.0" style="-fx-background-color: #FFFFFF; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 15, 0, 3, 0);">
         <!-- Header -->
         <HBox alignment="CENTER" prefHeight="55.0" style="-fx-background-color: linear-gradient(to right, #6A1B9A, #8E24AA); -fx-padding: 14;">
            <FontAwesomeIcon fill="#FFFFFF" glyphName="LIST_ALT" size="1.8em">
               <HBox.margin><Insets right="10.0" /></HBox.margin>
            </FontAwesomeIcon>
            <Label style="-fx-font-family: 'Segoe UI Semibold'; -fx-font-size: 17px;" text="Previous Entries" textFill="#FFFFFF" />
         </HBox>

         <!-- Search Filters -->
         <VBox spacing="10.0" style="-fx-padding: 12; -fx-background-color: #F5F5F5; -fx-border-color: #E0E0E0; -fx-border-width: 0 0 1 0;">
            <!-- Search by Entry/Invoice -->
            <VBox spacing="5.0">
               <Label style="-fx-font-family: 'Segoe UI Semibold'; -fx-font-size: 10px; -fx-text-fill: #616161;" text="SEARCH" />
               <TextField fx:id="txtSearchEntry" promptText="Entry or Invoice Number"
                         style="-fx-background-color: white; -fx-background-radius: 5; -fx-padding: 6; -fx-font-family: 'Segoe UI'; -fx-font-size: 11px; -fx-border-color: #BDBDBD; -fx-border-radius: 5; -fx-border-width: 1.5;" />
            </VBox>

            <!-- Date Range Search -->
            <VBox spacing="5.0">
               <Label style="-fx-font-family: 'Segoe UI Semibold'; -fx-font-size: 10px; -fx-text-fill: #616161;" text="DATE RANGE" />
               <HBox spacing="6.0">
                  <VBox spacing="3.0" HBox.hgrow="ALWAYS">
                     <Label style="-fx-font-family: 'Segoe UI'; -fx-font-size: 9px; -fx-text-fill: #757575;" text="From" />
                     <DatePicker fx:id="datePickerFrom" maxWidth="Infinity"
                                style="-fx-background-color: white; -fx-font-family: 'Segoe UI'; -fx-font-size: 10px; -fx-max-height: 28;" />
                  </VBox>
                  <VBox spacing="3.0" HBox.hgrow="ALWAYS">
                     <Label style="-fx-font-family: 'Segoe UI'; -fx-font-size: 9px; -fx-text-fill: #757575;" text="To" />
                     <DatePicker fx:id="datePickerTo" maxWidth="Infinity"
                                style="-fx-background-color: white; -fx-font-family: 'Segoe UI'; -fx-font-size: 10px; -fx-max-height: 28;" />
                  </VBox>
               </HBox>
            </VBox>

            <!-- Search Buttons -->
            <HBox spacing="6.0">
               <Button fx:id="btnSearchEntries" onAction="#handleSearchEntries" HBox.hgrow="ALWAYS" maxWidth="Infinity"
                       style="-fx-background-color: #6A1B9A; -fx-text-fill: white; -fx-font-family: 'Segoe UI Semibold'; -fx-font-size: 10px; -fx-padding: 7 10; -fx-background-radius: 5; -fx-cursor: hand;"
                       text="SEARCH">
                  <graphic>
                     <FontAwesomeIcon fill="#FFFFFF" glyphName="SEARCH" size="0.9em" />
                  </graphic>
               </Button>
               <Button fx:id="btnClearSearch" onAction="#handleClearSearch"
                       style="-fx-background-color: #757575; -fx-text-fill: white; -fx-font-family: 'Segoe UI Semibold'; -fx-font-size: 10px; -fx-padding: 7 10; -fx-background-radius: 5; -fx-cursor: hand;"
                       text="CLEAR">
                  <graphic>
                     <FontAwesomeIcon fill="#FFFFFF" glyphName="TIMES" size="0.9em" />
                  </graphic>
               </Button>
            </HBox>
         </VBox>

         <!-- Entries List -->
         <VBox VBox.vgrow="ALWAYS">
            <!-- Results Info -->
            <HBox alignment="CENTER_LEFT" spacing="6.0" style="-fx-padding: 10 12; -fx-background-color: #FAFAFA;">
               <Label fx:id="lblEntriesCount" style="-fx-font-family: 'Segoe UI Semibold'; -fx-font-size: 11px; -fx-text-fill: #424242;" text="All Entries" />
               <Region HBox.hgrow="ALWAYS" />
               <Label fx:id="lblEntriesTotal" style="-fx-font-family: 'Segoe UI'; -fx-font-size: 10px; -fx-text-fill: #757575;" text="0 entries" />
            </HBox>

            <!-- Entries ListView -->
            <ScrollPane fitToWidth="true" style="-fx-background: transparent; -fx-background-color: transparent;" VBox.vgrow="ALWAYS">
               <ListView fx:id="entriesList" style="-fx-background-color: white; -fx-border-width: 0;" VBox.vgrow="ALWAYS" />
            </ScrollPane>
         </VBox>

         <!-- Quick Actions -->
         <HBox alignment="CENTER" spacing="6.0" style="-fx-padding: 10; -fx-background-color: #F5F5F5; -fx-border-color: #E0E0E0; -fx-border-width: 1 0 0 0;">
            <Button fx:id="btnLoadEntry" onAction="#handleLoadEntry" HBox.hgrow="ALWAYS" maxWidth="Infinity"
                    style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-family: 'Segoe UI Semibold'; -fx-font-size: 11px; -fx-padding: 9 14; -fx-background-radius: 5; -fx-cursor: hand;"
                    text="LOAD">
               <graphic>
                  <FontAwesomeIcon fill="#FFFFFF" glyphName="UPLOAD" size="0.9em" />
               </graphic>
            </Button>
            <Button fx:id="btnViewEntry" onAction="#handleViewEntry"
                    style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-family: 'Segoe UI Semibold'; -fx-font-size: 11px; -fx-padding: 9 14; -fx-background-radius: 5; -fx-cursor: hand;"
                    text="VIEW">
               <graphic>
                  <FontAwesomeIcon fill="#FFFFFF" glyphName="EYE" size="0.9em" />
               </graphic>
            </Button>
         </HBox>
      </VBox>
   </left>

   <!-- CENTER PANEL - Main Content -->
   <center>
      <VBox spacing="0" style="-fx-background-color: transparent;">

         <!-- Header Card -->
         <VBox spacing="10.0" style="-fx-background-color: #FFFFFF; -fx-padding: 16; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.08), 8, 0, 0, 2);">
            <VBox.margin><Insets bottom="10.0" left="12.0" right="12.0" top="12.0" /></VBox.margin>

            <!-- Title Row -->
            <HBox alignment="CENTER_LEFT" spacing="12.0">
               <VBox spacing="2.0">
                  <Label style="-fx-font-family: 'Segoe UI Bold'; -fx-font-size: 20px; -fx-text-fill: #212121;" text="Stock Items Entry" />
                  <Label fx:id="lblEntryNumber" style="-fx-font-family: 'Segoe UI'; -fx-font-size: 12px; -fx-text-fill: #757575;" text="Entry #: SE-20250116-0001" />
               </VBox>
               <Region HBox.hgrow="ALWAYS" />
               <VBox alignment="CENTER_RIGHT" spacing="2.0">
                  <Label style="-fx-font-family: 'Segoe UI'; -fx-font-size: 10px; -fx-text-fill: #757575;" text="Entry Date" />
                  <TextField fx:id="txtEntryDate" editable="false" prefWidth="160.0"
                            style="-fx-background-color: #F5F5F5; -fx-background-radius: 5; -fx-padding: 6; -fx-font-family: 'Segoe UI'; -fx-font-size: 12px; -fx-border-color: transparent;" />
               </VBox>
            </HBox>
         </VBox>

         <!-- Content Area -->
         <VBox spacing="10.0" style="-fx-padding: 12;" VBox.vgrow="ALWAYS">

            <!-- Purchase Invoice Selection Card -->
            <VBox spacing="10.0" style="-fx-background-color: #FFFFFF; -fx-background-radius: 10; -fx-padding: 14; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.08), 10, 0, 0, 3);">
               <HBox alignment="CENTER_LEFT">
                  <FontAwesomeIcon fill="#6A1B9A" glyphName="FILE_TEXT" size="1.2em">
                     <HBox.margin><Insets right="8.0" /></HBox.margin>
                  </FontAwesomeIcon>
                  <Label style="-fx-font-family: 'Segoe UI Semibold'; -fx-font-size: 14px; -fx-text-fill: #424242;" text="Purchase Invoice" />
               </HBox>

               <HBox spacing="10.0" alignment="CENTER_LEFT">
                  <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                     <Label style="-fx-font-family: 'Segoe UI Semibold'; -fx-font-size: 10px; -fx-text-fill: #616161;" text="INVOICE *" />
                     <HBox fx:id="invoiceSearchContainer" maxWidth="Infinity" />
                  </VBox>
                  <VBox spacing="5.0" prefWidth="180.0">
                     <Label style="-fx-font-family: 'Segoe UI Semibold'; -fx-font-size: 10px; -fx-text-fill: #616161;" text="SUPPLIER" />
                     <Label fx:id="lblSupplierName" style="-fx-font-family: 'Segoe UI'; -fx-font-size: 12px; -fx-text-fill: #212121;" text="-" />
                  </VBox>
                  <VBox spacing="5.0" prefWidth="110.0">
                     <Label style="-fx-font-family: 'Segoe UI Semibold'; -fx-font-size: 10px; -fx-text-fill: #616161;" text="DATE" />
                     <Label fx:id="lblInvoiceDate" style="-fx-font-family: 'Segoe UI'; -fx-font-size: 12px; -fx-text-fill: #212121;" text="-" />
                  </VBox>
               </HBox>

               <!-- Available Metal Stock Display -->
               <VBox fx:id="metalStockPanel" spacing="6.0" managed="false" visible="false"
                     style="-fx-background-color: #E8F5E9; -fx-background-radius: 6; -fx-padding: 10; -fx-border-color: #4CAF50; -fx-border-radius: 6; -fx-border-width: 1.5;">
                  <Label style="-fx-font-family: 'Segoe UI Semibold'; -fx-font-size: 11px; -fx-text-fill: #2E7D32;" text="Available Metal Stock" />
                  <VBox fx:id="metalStockList" spacing="3.0" />
               </VBox>
            </VBox>

            <!-- Item Entry & Table Combined Card -->
            <VBox spacing="10.0" style="-fx-background-color: #FFFFFF; -fx-background-radius: 10; -fx-padding: 14; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.08), 10, 0, 0, 3);" VBox.vgrow="ALWAYS">
               <HBox alignment="CENTER_LEFT">
                  <FontAwesomeIcon fill="#6A1B9A" glyphName="CUBES" size="1.2em">
                     <HBox.margin><Insets right="8.0" /></HBox.margin>
                  </FontAwesomeIcon>
                  <Label style="-fx-font-family: 'Segoe UI Semibold'; -fx-font-size: 14px; -fx-text-fill: #424242;" text="Add Stock Items" />
                  <Region HBox.hgrow="ALWAYS" />
                  <Label fx:id="lblItemCount" style="-fx-font-family: 'Segoe UI'; -fx-font-size: 11px; -fx-text-fill: #757575;" text="0 items" />
               </HBox>

               <!-- Item Entry Form -->
               <VBox spacing="8.0">
                  <!-- Row 1: Item Selection -->
                  <HBox spacing="10.0" alignment="CENTER_LEFT">
                     <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                        <Label style="-fx-font-family: 'Segoe UI Semibold'; -fx-font-size: 10px; -fx-text-fill: #616161;" text="SELECT ITEM *" />
                        <HBox fx:id="itemSearchContainer" />
                     </VBox>
                     <Button fx:id="btnCreateNewItem" onAction="#handleCreateNewItem"
                            style="-fx-background-color: #FF9800; -fx-text-fill: white; -fx-font-family: 'Segoe UI Semibold'; -fx-font-size: 10px; -fx-padding: 7 14; -fx-background-radius: 5; -fx-cursor: hand;"
                            text="NEW ITEM">
                        <graphic>
                           <FontAwesomeIcon fill="#FFFFFF" glyphName="PLUS_CIRCLE" size="0.9em" />
                        </graphic>
                     </Button>
                  </HBox>

                  <!-- Row 2: Item Details & Quantity -->
                  <HBox spacing="10.0" alignment="CENTER_LEFT">
                     <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                        <Label style="-fx-font-family: 'Segoe UI Semibold'; -fx-font-size: 10px; -fx-text-fill: #616161;" text="ITEM NAME" />
                        <Label fx:id="lblItemName" style="-fx-font-family: 'Segoe UI'; -fx-font-size: 12px; -fx-text-fill: #212121;" text="-" />
                     </VBox>
                     <VBox spacing="5.0" prefWidth="100.0">
                        <Label style="-fx-font-family: 'Segoe UI Semibold'; -fx-font-size: 10px; -fx-text-fill: #616161;" text="CATEGORY" />
                        <Label fx:id="lblItemCategory" style="-fx-font-family: 'Segoe UI'; -fx-font-size: 12px; -fx-text-fill: #212121;" text="-" />
                     </VBox>
                     <VBox spacing="5.0" prefWidth="110.0">
                        <Label style="-fx-font-family: 'Segoe UI Semibold'; -fx-font-size: 10px; -fx-text-fill: #616161;" text="METAL" />
                        <Label fx:id="lblItemMetal" style="-fx-font-family: 'Segoe UI'; -fx-font-size: 12px; -fx-text-fill: #212121;" text="-" />
                     </VBox>
                     <VBox spacing="5.0" prefWidth="90.0">
                        <Label style="-fx-font-family: 'Segoe UI Semibold'; -fx-font-size: 10px; -fx-text-fill: #616161;" text="WEIGHT (g)" />
                        <Label fx:id="lblItemWeight" style="-fx-font-family: 'Segoe UI'; -fx-font-size: 12px; -fx-text-fill: #212121;" text="-" />
                     </VBox>
                     <VBox spacing="5.0" prefWidth="80.0">
                        <Label style="-fx-font-family: 'Segoe UI Semibold'; -fx-font-size: 10px; -fx-text-fill: #616161;" text="QTY *" />
                        <TextField fx:id="txtQuantity" text="1"
                                  style="-fx-background-color: white; -fx-background-radius: 5; -fx-padding: 6; -fx-font-family: 'Segoe UI'; -fx-font-size: 12px; -fx-border-color: #BDBDBD; -fx-border-radius: 5; -fx-border-width: 1.5;" />
                     </VBox>
                  </HBox>

                  <!-- Row 3: Remarks & Action Buttons -->
                  <HBox alignment="CENTER_LEFT" spacing="10.0">
                     <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                        <Label style="-fx-font-family: 'Segoe UI Semibold'; -fx-font-size: 10px; -fx-text-fill: #616161;" text="REMARKS" />
                        <TextField fx:id="txtItemRemarks" promptText="Optional remarks"
                                  style="-fx-background-color: white; -fx-background-radius: 5; -fx-padding: 6; -fx-font-family: 'Segoe UI'; -fx-font-size: 12px; -fx-border-color: #BDBDBD; -fx-border-radius: 5; -fx-border-width: 1.5;" />
                     </VBox>
                     <Button fx:id="btnAddItem" onAction="#handleAddItem"
                            style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-family: 'Segoe UI Bold'; -fx-font-size: 12px; -fx-padding: 9 20; -fx-background-radius: 5; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(76,175,80,0.3), 6, 0, 0, 2);"
                            text="ADD">
                        <graphic><FontAwesomeIcon fill="#FFFFFF" glyphName="PLUS" size="1.0em" /></graphic>
                     </Button>
                     <Button fx:id="btnDeleteItem" onAction="#handleDeleteItem"
                            style="-fx-background-color: #F44336; -fx-text-fill: white; -fx-font-family: 'Segoe UI Bold'; -fx-font-size: 12px; -fx-padding: 9 20; -fx-background-radius: 5; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(244,67,54,0.3), 6, 0, 0, 2);"
                            text="REMOVE">
                        <graphic><FontAwesomeIcon fill="#FFFFFF" glyphName="TRASH" size="0.9em" /></graphic>
                     </Button>
                     <Button fx:id="btnClearItem" onAction="#handleClearItem"
                            style="-fx-background-color: #757575; -fx-text-fill: white; -fx-font-family: 'Segoe UI Semibold'; -fx-font-size: 12px; -fx-padding: 9 16; -fx-background-radius: 5; -fx-cursor: hand;"
                            text="CLEAR">
                        <graphic><FontAwesomeIcon fill="#FFFFFF" glyphName="ERASER" size="0.9em" /></graphic>
                     </Button>
                  </HBox>
               </VBox>

               <Separator style="-fx-background-color: #E0E0E0;" />

               <!-- Items Table -->
               <TableView fx:id="itemsTable" VBox.vgrow="ALWAYS" prefHeight="250.0" style="-fx-background-color: transparent; -fx-border-color: #E0E0E0; -fx-border-width: 1; -fx-border-radius: 5;">
                  <columns>
                     <TableColumn fx:id="colSno" prefWidth="40.0" text="#" style="-fx-alignment: CENTER;" />
                     <TableColumn fx:id="colItemCode" prefWidth="100.0" text="Code" />
                     <TableColumn fx:id="colItemName" prefWidth="160.0" text="Item Name" />
                     <TableColumn fx:id="colCategory" prefWidth="100.0" text="Category" />
                     <TableColumn fx:id="colMetalType" prefWidth="80.0" text="Metal" />
                     <TableColumn fx:id="colPurity" prefWidth="60.0" text="Purity" style="-fx-alignment: CENTER;" />
                     <TableColumn fx:id="colGrossWeight" prefWidth="90.0" text="Gross Wt" style="-fx-alignment: CENTER-RIGHT;" />
                     <TableColumn fx:id="colNetWeight" prefWidth="90.0" text="Net Wt" style="-fx-alignment: CENTER-RIGHT;" />
                     <TableColumn fx:id="colQuantity" prefWidth="60.0" text="Qty" style="-fx-alignment: CENTER;" />
                     <TableColumn fx:id="colTotalWeight" prefWidth="90.0" text="Total Wt" style="-fx-alignment: CENTER-RIGHT;" />
                  </columns>
               </TableView>
            </VBox>

         </VBox>
      </VBox>
   </center>

   <!-- RIGHT PANEL - Summary & Actions -->
   <right>
      <VBox prefWidth="330.0" style="-fx-background-color: #FFFFFF; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 15, 0, -3, 0);">

         <!-- Header -->
         <HBox alignment="CENTER" prefHeight="55.0" style="-fx-background-color: linear-gradient(to right, #6A1B9A, #8E24AA); -fx-padding: 14;">
            <FontAwesomeIcon fill="#FFFFFF" glyphName="CALCULATOR" size="1.8em">
               <HBox.margin><Insets right="10.0" /></HBox.margin>
            </FontAwesomeIcon>
            <Label style="-fx-font-family: 'Segoe UI Semibold'; -fx-font-size: 17px;" text="Entry Summary" textFill="#FFFFFF" />
         </HBox>

         <!-- Summary Content -->
         <VBox spacing="10.0" style="-fx-padding: 12;" VBox.vgrow="ALWAYS">

            <!-- Metal Consumption Card -->
            <VBox fx:id="metalConsumptionPanel" spacing="8.0" managed="false" visible="false"
                  style="-fx-background-color: #E8F5E9; -fx-background-radius: 7; -fx-padding: 10; -fx-border-color: #4CAF50; -fx-border-radius: 7; -fx-border-width: 1.5;">
               <HBox alignment="CENTER_LEFT">
                  <FontAwesomeIcon fill="#2E7D32" glyphName="INDUSTRY" size="1.0em">
                     <HBox.margin><Insets right="6.0" /></HBox.margin>
                  </FontAwesomeIcon>
                  <Label style="-fx-font-family: 'Segoe UI Semibold'; -fx-font-size: 11px; -fx-text-fill: #2E7D32;" text="Metal Consumption" />
               </HBox>
               <VBox fx:id="metalConsumptionList" spacing="5.0" />
            </VBox>

            <!-- Entry Totals Card -->
            <VBox spacing="8.0" style="-fx-background-color: #F5F5F5; -fx-background-radius: 7; -fx-padding: 10;">
               <Label style="-fx-font-family: 'Segoe UI Semibold'; -fx-font-size: 10px; -fx-text-fill: #424242;" text="ENTRY TOTALS" />

               <VBox spacing="5.0">
                  <HBox alignment="CENTER">
                     <Label style="-fx-font-family: 'Segoe UI'; -fx-font-size: 11px; -fx-text-fill: #616161;" text="Total Items:" HBox.hgrow="ALWAYS" />
                     <Label fx:id="lblTotalItems" style="-fx-font-family: 'Segoe UI Semibold'; -fx-font-size: 12px; -fx-text-fill: #212121;" text="0" />
                  </HBox>

                  <HBox alignment="CENTER">
                     <Label style="-fx-font-family: 'Segoe UI'; -fx-font-size: 11px; -fx-text-fill: #616161;" text="Gross Weight:" HBox.hgrow="ALWAYS" />
                     <Label fx:id="lblTotalGrossWeight" style="-fx-font-family: 'Segoe UI Semibold'; -fx-font-size: 12px; -fx-text-fill: #212121;" text="0.000 g" />
                  </HBox>

                  <HBox alignment="CENTER">
                     <Label style="-fx-font-family: 'Segoe UI'; -fx-font-size: 11px; -fx-text-fill: #616161;" text="Net Weight:" HBox.hgrow="ALWAYS" />
                     <Label fx:id="lblTotalNetWeight" style="-fx-font-family: 'Segoe UI Semibold'; -fx-font-size: 12px; -fx-text-fill: #212121;" text="0.000 g" />
                  </HBox>
               </VBox>
            </VBox>

            <!-- Remarks -->
            <VBox spacing="6.0">
               <Label style="-fx-font-family: 'Segoe UI Semibold'; -fx-font-size: 10px; -fx-text-fill: #616161;" text="REMARKS" />
               <TextArea fx:id="txtRemarks" prefRowCount="3" promptText="Optional remarks for this entry"
                        style="-fx-background-color: white; -fx-background-radius: 5; -fx-font-family: 'Segoe UI'; -fx-font-size: 11px; -fx-border-color: #BDBDBD; -fx-border-radius: 5; -fx-border-width: 1;" />
            </VBox>

            <!-- Action Buttons -->
            <VBox spacing="8.0" VBox.vgrow="ALWAYS" alignment="BOTTOM_CENTER" style="-fx-padding: 4 0 0 0;">
               <Button fx:id="btnSave" onAction="#handleSave" maxWidth="Infinity"
                      style="-fx-background-color: linear-gradient(to right, #6A1B9A, #8E24AA); -fx-text-fill: white; -fx-font-family: 'Segoe UI Bold'; -fx-font-size: 13px; -fx-padding: 11; -fx-background-radius: 6; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(106,27,154,0.4), 10, 0, 0, 3);"
                      text="SAVE ENTRY">
                  <graphic><FontAwesomeIcon fill="#FFFFFF" glyphName="SAVE" size="1.1em" /></graphic>
               </Button>

               <HBox spacing="6.0">
                  <Button fx:id="btnPrint" maxWidth="Infinity" HBox.hgrow="ALWAYS"
                         style="-fx-background-color: #757575; -fx-text-fill: white; -fx-font-family: 'Segoe UI Semibold'; -fx-font-size: 10px; -fx-padding: 8; -fx-background-radius: 5; -fx-cursor: hand;"
                         text="PRINT">
                     <graphic><FontAwesomeIcon fill="#FFFFFF" glyphName="PRINT" size="0.9em" /></graphic>
                  </Button>
                  <Button fx:id="btnClear" onAction="#handleClearAll" maxWidth="Infinity" HBox.hgrow="ALWAYS"
                         style="-fx-background-color: #F44336; -fx-text-fill: white; -fx-font-family: 'Segoe UI Semibold'; -fx-font-size: 10px; -fx-padding: 8; -fx-background-radius: 5; -fx-cursor: hand;"
                         text="CLEAR ALL">
                     <graphic><FontAwesomeIcon fill="#FFFFFF" glyphName="TIMES_CIRCLE" size="0.9em" /></graphic>
                  </Button>
               </HBox>
            </VBox>
         </VBox>
      </VBox>
   </right>
</BorderPane>
